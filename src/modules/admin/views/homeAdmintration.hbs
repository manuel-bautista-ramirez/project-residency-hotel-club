              {{#each users}}
              <tr class="transition-colors duration-200 hover:bg-slate-50">
                <td class="px-3 py-1.5 whitespace-nowrap">
                  <div class="flex items-center">
                    <div class="flex-shrink-0 h-5 w-5">
                      <div
