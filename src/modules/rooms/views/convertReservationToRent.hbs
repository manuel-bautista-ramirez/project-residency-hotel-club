<script>
  // Handle form submission
  document.getElementById('formConvert').addEventListener('submit', (e) => {
    const paymentType = document.getElementById('payment_type');

    if (!paymentType.value) {
      e.preventDefault();
      showNotification('Por favor selecciona un tipo de pago', 'error');
      paymentType.focus();
      return;
    }

    const overlay = document.getElementById('loadingOverlay');
    overlay.classList.remove('hidden');
    overlay.classList.add('flex');
  });

  function showNotification(message, type = 'info') {
    const notification = document.createElement('div');
    const config = {
      success: { bgColor: 'bg-green-500', icon: '‚úì' },
      error: { bgColor: 'bg-red-500', icon: '‚úï' },
      warning: { bgColor: 'bg-yellow-500', icon: '‚ö†' },
      info: { bgColor: 'bg-blue-500', icon: '‚Ñπ' }
    };

    const { bgColor, icon } = config[type];
    notification.className = `fixed z-50 top-4 right-4 ${bgColor} text-white px-4 py-2 rounded-lg text-xs sm:text-sm font-medium shadow-lg max-w-xs`;
    notification.textContent = `${icon} ${message}`;
    document.body.appendChild(notification);

    setTimeout(() => {
      notification.style.opacity = '0';
      setTimeout(() => notification.remove(), 300);
    }, 3000);
  }
</script>
