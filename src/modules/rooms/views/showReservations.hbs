                      <i class="fa-solid fa-pen-to-square text-base"></i>
                    </a>
                    {{/if}}
                    {{#unless this.es_convertida}}
                    <a href="/rooms/confirmReservations/renta/{{this.id_reservacion}}"
                      class="text-green-600 hover:text-green-800 p-1.5 rounded hover:bg-green-50 transition-colors confirm-btn"
                      title="Confirmar reservación">
                      <i class="fa-solid fa-check text-base"></i>
                    </a>
                    {{else}}
                    <span class="text-blue-600 p-1.5 rounded" title="Reservación convertida">
                      <i class="fa-solid fa-right-left text-base"></i>
                    </span>
                    {{/unless}}
                    {{#if (eq @root.user.role 'Administrador')}}
