                    {{#unless this.es_convertida}}
                    <a href="/rooms/confirmReservations/renta/{{this.id_reservacion}}"
                      class="flex-1 inline-flex items-center justify-center gap-1 px-2 py-2 bg-green-600 hover:bg-green-700 text-white rounded-lg text-xs font-semibold transition-colors confirm-btn">
