                <p class="text-[10px] text-gray-500">Intenta con otros términos</p>
              </div>
            </div>
          </div>
        </div>
      </div>

      <script>
        // Configuración para asegurar que las cards se muestren completamente
        document.addEventListener('DOMContentLoaded', function () {

          // Ajustar altura dinámica
          function adjustContainerHeight() {
            const section = document.getElementById('mobileTabletSection');
            const controls = document.getElementById('reservationControlsMobile');
            const cardsSection = document.getElementById('cardsSection');

            if (section && controls && cardsSection) {
              const controlsHeight = controls.offsetHeight;
              const viewportHeight = window.innerHeight;

              const availableHeight = viewportHeight - controlsHeight - 80;
              cardsSection.style.height = `${Math.max(availableHeight, 250)}px`;
            }
          }

          adjustContainerHeight();
          window.addEventListener('resize', adjustContainerHeight);

          function toReadableDate(dateStr, type = 'reserva') {
            if (!dateStr) return '';

            const normalized = dateStr.replace(' ', 'T');
            const date = new Date(normalized);

            if (Number.isNaN(date.getTime())) return dateStr;

            if (type === 'ingreso') {
              date.setUTCHours(12, 0, 0, 0);
            } else if (type === 'salida') {
              date.setUTCHours(11, 59, 0, 0);
            }

            const day = String(date.getUTCDate()).padStart(2, '0');
            const month = String(date.getUTCMonth() + 1).padStart(2, '0');
            const year = date.getUTCFullYear();

            const hours = date.getUTCHours();
            const minutes = String(date.getUTCMinutes()).padStart(2, '0');

            const ampm = hours >= 12 ? 'PM' : 'AM';
            const hour12 = ((hours % 12) || 12).toString().padStart(2, '0');

            return `${day}/${month}/${year} ${hour12}:${minutes} ${ampm}`;
          }

          function applyReservationFormatting() {
            const tableRows = document.querySelectorAll('#reservationsTableBody tr.reservation-row');
            tableRows.forEach((row) => {
              const fechaReservaSpan = row.querySelector('td:nth-child(3) span');
              const fechaIngresoSpan = row.querySelector('td:nth-child(4) span');
              const fechaSalidaSpan = row.querySelector('td:nth-child(5) span');

              if (fechaReservaSpan && row.dataset.reserva) {
                fechaReservaSpan.textContent = toReadableDate(row.dataset.reserva, 'reserva');
              }

              if (fechaIngresoSpan && row.dataset.ingreso) {
                fechaIngresoSpan.textContent = toReadableDate(row.dataset.ingreso, 'ingreso');
              }

              if (fechaSalidaSpan && row.dataset.salida) {
                fechaSalidaSpan.textContent = toReadableDate(row.dataset.salida, 'salida');
              }
            });

            const cards = document.querySelectorAll('#cardsSection article.reservation-reveal');
            cards.forEach((card) => {
              const fechaDivs = card.querySelectorAll('.grid.grid-cols-3 > div');

              if (fechaDivs.length >= 3) {
                const fechaReservaDiv = fechaDivs[0].querySelector('.text-xs.font-semibold');
                if (fechaReservaDiv && card.dataset.reserva) {
                  fechaReservaDiv.textContent = toReadableDate(card.dataset.reserva, 'reserva');
