    function closeDeleteReservationModal() {
      const modal = document.getElementById('deleteReservationModal');
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
    }

    // Cerrar modal al hacer clic fuera
    document.addEventListener('click', function (event) {
      const modal = document.getElementById('deleteReservationModal');
      if (modal && event.target === modal) {
        closeDeleteReservationModal();
      }
    });

    // FUNCIÓN PARA AJUSTAR LA ALTURA DE LA TABLA DE RESERVACIONES DINÁMICAMENTE
    function adjustReservationsTableHeight() {
      const tableContainer = document.getElementById('reservationsTableContainer');
      const reservationsTableBody = document.getElementById('reservationsTableBody');

      if (!tableContainer || !reservationsTableBody) {
        console.log('Elementos de la tabla de reservaciones no encontrados');
        return;
      }

      const reservationRows = reservationsTableBody.querySelectorAll('tr.reservation-row');
      const visibleReservations = Array.from(reservationRows).filter(row => !row.classList.contains('hidden'));
      const reservationCount = visibleReservations.length;

      console.log(`Ajustando tabla de reservaciones: ${reservationCount} reservaciones visibles`);

      // Si hay 4 o menos reservaciones, ajustar altura exacta sin espacio en blanco
      if (reservationCount <= 4) {
        console.log('Ajustando altura natural - sin scroll');
        tableContainer.style.maxHeight = 'none';
        tableContainer.style.height = 'auto';
        tableContainer.style.overflowY = 'hidden';
        tableContainer.className = 'overflow-x-auto';
      } else {
        // Si hay más de 4 reservaciones, activar scroll con altura fija de 4 filas + header
        console.log('Con scroll - más de 4 reservaciones');
        tableContainer.style.maxHeight = 'calc(4 * 3.5rem + 3.5rem)';
        tableContainer.style.height = '';
        tableContainer.style.overflowY = 'auto';
        tableContainer.className = 'overflow-auto scrollbar-thin scrollbar-thumb-gray-300 scrollbar-track-gray-100';
      }
    }

    // Inicialización mejorada de filtros (solo si hay elementos)
    function initializeReservationsFilters() {
      const overlay = document.getElementById('reservationsLoadingOverlay');

      // Verificar si existen los elementos necesarios
      const tableSection = document.getElementById('tableSection');
      const mobileTabletSection = document.getElementById('mobileTabletSection');

      if (!tableSection && !mobileTabletSection) {
        console.log('No hay secciones de reservaciones disponibles');
        return;
      }

      // Obtener todas las reservaciones (tabla y cards)
      const tableRows = Array.from(document.querySelectorAll('#tableSection .reservation-row'));
      const cardElements = Array.from(document.querySelectorAll('#cardsSection .reservation-reveal'));

      // Filtros
      const controls = {
        desktop: {
          q: document.getElementById('reservationSearch'),
          reset: document.getElementById('reservationReset'),
          countPending: document.getElementById('reservationCountPending')
        },
        mobile: {
          q: document.getElementById('reservationSearchMobile'),
          reset: document.getElementById('reservationResetMobile'),
          countPending: document.getElementById('reservationCountPendingMobile')
        }
      };

      // Estado
      let currentSearch = '';
      let currentPage = 1;
      const itemsPerPage = 8;

      // Controles de paginación
      const pagination = {
        desktop: {
          prev: document.getElementById('prevPageBtn'),
          next: document.getElementById('nextPageBtn'),
          indicator: document.getElementById('pageIndicator')
        },
        mobile: {
          prev: document.getElementById('prevPageBtnMobile'),
          next: document.getElementById('nextPageBtnMobile'),
          indicator: document.getElementById('pageIndicatorMobile')
        }
      };

      // Normalizar texto
      function norm(str) {
        return (str || '').toString().toLowerCase().normalize("NFD").replace(/[\u0300-\u036f]/g, "");
      }

      // Ocultar overlay si existe
      setTimeout(() => {
        if (overlay) overlay.classList.add('hidden');

        // Animar elementos
        const allReveals = document.querySelectorAll('.reservation-row, .reservation-reveal');
        allReveals.forEach((el, idx) => {
          setTimeout(() => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(10px)';
            el.style.transition = 'opacity 0.3s ease, transform 0.3s ease';

            requestAnimationFrame(() => {
              el.style.opacity = '1';
              el.style.transform = 'translateY(0)';
            });
          }, idx * 30);
        });

        // Ajustar altura de tabla después de cargar
        adjustReservationsTableHeight();
      }, 300);

      // Función de filtrado CORREGIDA: ahora muestra TODAS las reservaciones
      function applyFilters() {
        const searchDesktop = norm(controls.desktop.q ? controls.desktop.q.value : '');
        const searchMobile = norm(controls.mobile.q ? controls.mobile.q.value : '');
        const searchText = searchDesktop || searchMobile;

        let visibleCount = 0;
        let pendingCount = 0;

        [...tableRows, ...cardElements].forEach(el => {
          const matchesSearch = !searchText ||
            norm(el.dataset.nombre || '').includes(searchText) ||
            norm(el.dataset.hab || '').includes(searchText) ||
            norm(el.dataset.reserva || '').includes(searchText) ||
            norm(el.dataset.ingreso || '').includes(searchText) ||
            norm(el.dataset.salida || '').includes(searchText) ||
            norm(el.dataset.estado || '').includes(searchText) ||
            norm(el.dataset.origen || '').includes(searchText);

          // MODIFICACIÓN IMPORTANTE: Ahora mostramos TODAS las reservaciones
          const shouldShow = matchesSearch; // Sin ocultar convertidas

          el.classList.toggle('hidden', !shouldShow);
          el.style.display = shouldShow ? '' : 'none';

          if (shouldShow) {
            visibleCount++;
            pendingCount++;
          }
        });

        // Mostrar/ocultar mensaje de "sin resultados"
        const noResultsRow = document.getElementById('noResultsRow');
        const noResultsCard = document.getElementById('noResultsCard');

        if (visibleCount === 0 && searchText) {
          if (noResultsRow) {
            noResultsRow.classList.remove('hidden');
          }
          if (noResultsCard) {
            noResultsCard.classList.remove('hidden');
          }
        } else {
          if (noResultsRow) {
            noResultsRow.classList.add('hidden');
          }
          if (noResultsCard) {
            noResultsCard.classList.add('hidden');
          }
        }

        // Actualizar contadores
        if (controls.desktop.countPending) controls.desktop.countPending.textContent = pendingCount;
        if (controls.mobile.countPending) controls.mobile.countPending.textContent = pendingCount;

        currentPage = 1;
        applySortAndPaginate();
        adjustReservationsTableHeight();
      }

      // Función de paginación
      function applySortAndPaginate() {
        const visibleRows = tableRows.filter(el => !el.classList.contains('hidden'));
        const visibleCards = cardElements.filter(el => !el.classList.contains('hidden'));

        const totalVisible = visibleRows.length;
        const totalPages = Math.max(1, Math.ceil(totalVisible / itemsPerPage));

        if (currentPage > totalPages) currentPage = totalPages;

        const start = (currentPage - 1) * itemsPerPage;
        const end = start + itemsPerPage;

        // Mostrar/ocultar filas según paginación
        visibleRows.forEach((row, idx) => {
          const inPage = idx >= start && idx < end;
          row.style.display = inPage ? '' : 'none';
        });

        visibleCards.forEach((card, idx) => {
          const inPage = idx >= start && idx < end;
          card.style.display = inPage ? '' : 'none';
        });


        // Actualizar indicadores de paginación
        [pagination.desktop, pagination.mobile].forEach(p => {
          if (p.indicator) p.indicator.textContent = `${currentPage}/${totalPages}`;
          if (p.prev) p.prev.disabled = currentPage <= 1;
          if (p.next) p.next.disabled = currentPage >= totalPages;

        });
      }

      // Event listeners
      [controls.desktop.q, controls.mobile.q].forEach(input => {
        if (input) {
          input.addEventListener('input', applyFilters);
          input.addEventListener('change', applyFilters);
        }
      });

      [controls.desktop.reset, controls.mobile.reset].forEach(btn => {
        if (btn) {
          btn.addEventListener('click', () => {
            if (controls.desktop.q) controls.desktop.q.value = '';
            if (controls.mobile.q) controls.mobile.q.value = '';
            applyFilters();
          });
        }
      });

      // Paginación
      [pagination.desktop.prev, pagination.mobile.prev].forEach(btn => {
        if (btn) {
          btn.addEventListener('click', () => {
            if (currentPage > 1) {
              currentPage--;
              applySortAndPaginate();
            }
          });
        }
      });

      [pagination.desktop.next, pagination.mobile.next].forEach(btn => {
        if (btn) {
          btn.addEventListener('click', () => {
            currentPage++;
            applySortAndPaginate();
          });
        }
      });

      // Inicializar
      applyFilters();

      // Validar botones de confirmar
      validateConfirmButtons();
    }

    // Función para validar y habilitar/deshabilitar botones de confirmar
    function validateConfirmButtons() {
      const now = new Date();
      const confirmButtons = document.querySelectorAll('.confirm-btn');

      confirmButtons.forEach(button => {
        const container = button.closest('tr') || button.closest('article');
        if (!container) return;

        const fechaIngresoStr = container.dataset.ingreso;
        const fechaSalidaStr = container.dataset.salida;
        const esConvertida = container.dataset.esConvertida === 'true';

        if (esConvertida) {
          button.classList.add('opacity-50', 'cursor-not-allowed', 'pointer-events-none');
          button.classList.remove('hover:bg-green-700');
          button.title = 'Reservación convertida - No se puede confirmar';
          return;
        }

        if (!fechaIngresoStr || !fechaSalidaStr) return;

        try {
          const fechaIngreso = new Date(fechaIngresoStr);
          const fechaSalida = new Date(fechaSalidaStr);
          const fechaHabilitacion = new Date(fechaIngreso.getTime() - (30 * 60 * 1000));

          const enRangoValido = now >= fechaHabilitacion && now <= fechaSalida;

          if (enRangoValido) {
            button.classList.remove('opacity-50', 'cursor-not-allowed', 'pointer-events-none');
            button.classList.add('hover:bg-green-700');
            button.title = 'Confirmar reservación';
          } else {
            button.classList.add('opacity-50', 'cursor-not-allowed', 'pointer-events-none');
            button.classList.remove('hover:bg-green-700');
            if (now < fechaHabilitacion) {
              const tiempoRestante = Math.ceil((fechaHabilitacion - now) / (1000 * 60));
              button.title = `Disponible en ${tiempoRestante} minutos (30 min antes del ingreso)`;
            } else {
              button.title = 'Reservación expirada - No se puede confirmar';
            }
          }
        } catch (error) {
          console.error('Error al validar fechas para botón:', error);
          button.classList.add('opacity-50', 'cursor-not-allowed', 'pointer-events-none');
          button.title = 'Error al validar fechas';
        }
      });
    }

    // Inicializar cuando el DOM esté listo (solo si hay elementos)
    document.addEventListener('DOMContentLoaded', function () {
      // Verificar si hay elementos de reservaciones
      const tableSection = document.getElementById('tableSection');
      const mobileTabletSection = document.getElementById('mobileTabletSection');

      if (tableSection || mobileTabletSection) {
        initializeReservationsFilters();

        // Actualizar validación cada minuto
        setInterval(validateConfirmButtons, 60000);
      }
    });

    // Funciones para el modal de advertencia de estado de habitación
    function openRoomStatusWarningModal(roomNumber) {
      const modal = document.getElementById('roomStatusWarningModal');
      const roomNumberSpan = document.getElementById('warningRoomNumber');

      if (modal && roomNumberSpan) {
        roomNumberSpan.textContent = roomNumber;
        modal.classList.remove('hidden');
        modal.classList.add('flex');
      }
    }

    function closeRoomStatusWarningModal() {
      const modal = document.getElementById('roomStatusWarningModal');
      if (modal) {
        modal.classList.add('hidden');
        modal.classList.remove('flex');
      }
    }

    // Cerrar modal al hacer clic fuera
    document.addEventListener('click', function (event) {
      const modal = document.getElementById('roomStatusWarningModal');
      if (modal && event.target === modal) {
        closeRoomStatusWarningModal();
      }
    });

    // Interceptar clics en botones de confirmación para validar estado de habitación
    document.addEventListener('DOMContentLoaded', function () {
      const confirmButtons = document.querySelectorAll('.confirm-btn');

      confirmButtons.forEach(button => {
        button.addEventListener('click', async function (event) {
          event.preventDefault(); // Prevenir navegación inmediata

          const container = button.closest('tr') || button.closest('article');
          if (!container) {
            window.location.href = button.href;
            return;
          }

          const roomNumber = container.dataset.hab;
          const esConvertida = container.dataset.esConvertida === 'true';

          if (esConvertida) {
            alert('Esta reservación ya ha sido convertida a renta.');
            return;
          }

          if (!roomNumber) {
            window.location.href = button.href;
            return;
          }

          try {
            // Hacer petición al backend para obtener el estado de la habitación
            const response = await fetch(`/api/rooms/status/${roomNumber}`);

            if (!response.ok) {
              // Si hay error en la petición, permitir continuar
              window.location.href = button.href;
              return;
            }

            const data = await response.json();

            // Si la habitación está en limpieza, mostrar modal de advertencia
            if (data.estado === 'limpieza') {
              openRoomStatusWarningModal(roomNumber);
            } else {
              // Si está disponible u otro estado, permitir continuar
              window.location.href = button.href;
            }
          } catch (error) {
            console.error('Error al verificar estado de habitación:', error);
            // En caso de error, permitir continuar
            window.location.href = button.href;
          }
        });
      });
    });
  </script>
