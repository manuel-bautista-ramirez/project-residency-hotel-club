                  <span class="font-semibold">Pendientes:</span>
                  
                  
                  
                  <span id="reservationCountPending" class="font-bold">
                    {{resumenReservaciones.pendientes.cantidad}}
                  </span>
                </div>
              </div>

              <!-- Controles de Paginación Desktop -->
