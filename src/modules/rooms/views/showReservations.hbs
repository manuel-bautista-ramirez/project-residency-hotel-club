
<style>
  /* Utilidad para truncar 2 líneas */
  .line-clamp-2 {
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }

  /* Ajustes específicos para móvil */
  @media (max-width: 767px) {
    #reservationControlsMobile {
      margin-bottom: 12px;
    }

    .reservation-reveal {
      min-height: 280px;
      max-width: 100%;
    }

    .reservation-reveal * {
      line-height: 1.2;
    }

    .reservation-reveal>div {
      padding: 8px;
    }
  }

  /* Ajustes específicos para tablet */
  @media (min-width: 768px) and (max-width: 1023px) {
    #cardsSection {
      padding-left: 8px;
      padding-right: 8px;
    }

    .reservation-reveal {
      min-height: 260px;
      height: 100%;
    }

    .grid-cols-1.md\:grid-cols-2 {
      gap: 12px;
    }
  }

  /* Ajustar altura dinámica para mejor scroll */
  #mobileTabletSection {
    height: calc(100vh - 160px);
  }

  #cardsSection {
    height: calc(100vh - 220px);
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  /* Mejorar la legibilidad del texto pequeño */
  .text-\[10px\] {
    font-size: 10px;
    line-height: 1.1;
  }
</style>

<div class="h-screen max-w-7xl mx-auto px-3 sm:px-4 pt-16 sm:pt-20 pb-1 flex flex-col overflow-hidden">
  <div class="flex-none">
    {{>buttons}}
  </div>

  <!-- CONDICIONAL SIMPLIFICADO -->
  {{#if allReservationes}}


    <!-- ========== RESERVACIONES PENDIENTES ========== -->
      <!-- Loading Overlay -->
      <div id="reservationsLoadingOverlay"
        class="fixed inset-0 z-[60] bg-white/80 backdrop-blur-sm items-center justify-center hidden">
        <div class="flex flex-col items-center gap-3">
          <svg class="w-10 h-10 text-blue-700 animate-spin" xmlns="http://www.w3.org/2000/svg" fill="none"
            viewBox="0 0 24 24" aria-hidden="true" role="img">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8v4a4 4 0 00-4 4H4z"></path>
          </svg>
          <p class="text-sm text-blue-900 font-medium">Cargando reservaciones...</p>
        </div>
      </div>



      <div class="pt-2"></div>

      <!-- TABLA CON SCROLL DINÁMICO - Desktop -->
