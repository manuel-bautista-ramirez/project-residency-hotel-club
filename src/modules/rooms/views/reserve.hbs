        showNotification('Error al obtener el precio', 'error');
        console.error("‚ùå Error obteniendo precio:", err);
      } finally {
        submitButton.disabled = false;
        submitButton.textContent = 'Crear reservaci√≥n';
      }
    }

    // Add time to date
    // Check-in: 12:00 PM (mediod√≠a)
    // Check-out: 11:59 AM (para permitir nuevas reservaciones/rentas el mismo d√≠a a las 12:00 PM)
    function addTimeToDate(dateStr, isCheckout = false) {
      if (!dateStr) return '';
      
      // Extraer a√±o, mes y d√≠a directamente del string YYYY-MM-DD
      // Sin usar new Date() para evitar problemas de zona horaria
      const [year, month, day] = dateStr.split('-');
      
      // Check-out a las 11:59 AM, Check-in a las 12:00 PM
      const time = isCheckout ? '11:59:00' : '12:00:00';
      return `${year}-${month}-${day} ${time}`;
    }

    // Find next available date
    async function findNextAvailableDate() {
