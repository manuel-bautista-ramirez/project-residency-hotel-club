              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
      </div>

      <!-- Formulario -->
      <form id="eventForm" class="p-6 space-y-5">
        <!-- Nombre del evento -->
        <div>
          <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
            Nombre del evento
            <span class="text-red-500">*</span>
          </label>
          <input 
            type="text" 
            id="eventName" 
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all"
            placeholder="Ej: Juan P√©rez - Habitaci√≥n 101"
          />
        </div>

        <!-- Fecha y Hora -->
        <div>
          <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            Fecha
            <span class="text-red-500">*</span>
          </label>
          <div class="grid grid-cols-2 sm:grid-cols-5 gap-3">
            <input 
              type="number" 
              id="eventDay" 
              min="1" 
              max="31" 
              required
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="D√≠a"
            />
            <select 
              id="eventMonth" 
              required
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            >
              <option value="">Mes</option>
              <option value="1">Enero</option>
              <option value="2">Febrero</option>
              <option value="3">Marzo</option>
              <option value="4">Abril</option>
              <option value="5">Mayo</option>
              <option value="6">Junio</option>
              <option value="7">Julio</option>
              <option value="8">Agosto</option>
              <option value="9">Septiembre</option>
              <option value="10">Octubre</option>
              <option value="11">Noviembre</option>
              <option value="12">Diciembre</option>
            </select>
            <input 
              type="number" 
              id="eventYear" 
              min="2024" 
              max="2030" 
              required
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="A√±o"
            />
            <input 
              type="number" 
              id="eventHour" 
              min="0" 
              max="23" 
              required
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Hora"
            />
            <input 
              type="number" 
              id="eventMinute" 
              min="0" 
              max="59" 
              required
              class="px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
              placeholder="Min"
            />
          </div>
        </div>

        <!-- Tipo de evento -->
        <div>
          <label class="flex items-center gap-2 text-sm font-semibold text-gray-700 mb-2">
            <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
            Tipo de evento
            <span class="text-red-500">*</span>
          </label>
          <div class="grid grid-cols-2 gap-4">
            <label class="relative flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-emerald-500 transition-all">
              <input type="radio" name="eventType" value="renta" required class="sr-only peer" />
              <div class="flex items-center gap-3 w-full">
                <div class="w-10 h-10 rounded-full bg-emerald-100 flex items-center justify-center peer-checked:bg-emerald-500 transition-colors">
                  <svg class="w-5 h-5 text-emerald-600 peer-checked:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
                  </svg>
                </div>
                <span class="font-semibold text-gray-700">Renta</span>
              </div>
              <div class="absolute inset-0 border-2 border-emerald-500 rounded-lg opacity-0 peer-checked:opacity-100 transition-opacity"></div>
            </label>
            
            <label class="relative flex items-center p-4 border-2 border-gray-300 rounded-lg cursor-pointer hover:border-blue-500 transition-all">
              <input type="radio" name="eventType" value="reservacion" required class="sr-only peer" />
              <div class="flex items-center gap-3 w-full">
                <div class="w-10 h-10 rounded-full bg-blue-100 flex items-center justify-center peer-checked:bg-blue-500 transition-colors">
                  <svg class="w-5 h-5 text-blue-600 peer-checked:text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
                  </svg>
                </div>
                <span class="font-semibold text-gray-700">Reservaci√≥n</span>
              </div>
              <div class="absolute inset-0 border-2 border-blue-500 rounded-lg opacity-0 peer-checked:opacity-100 transition-opacity"></div>
            </label>
          </div>
        </div>

        <!-- Informaci√≥n adicional (opcional) -->
        <details class="group">
          <summary class="flex items-center gap-2 text-sm font-semibold text-gray-700 cursor-pointer hover:text-blue-600 transition-colors">
            <svg class="w-4 h-4 transform group-open:rotate-90 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
            Mostrar m√°s opciones
          </summary>
          <div class="mt-4 space-y-4 pl-6">
            <div>
              <label class="text-sm font-medium text-gray-700 mb-1 block">Correo electr√≥nico</label>
              <input 
                type="email" 
                id="eventEmail"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="correo@ejemplo.com"
              />
            </div>
            <div>
              <label class="text-sm font-medium text-gray-700 mb-1 block">Tel√©fono</label>
              <input 
                type="tel" 
                id="eventPhone"
                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                placeholder="1234567890"
              />
            </div>
          </div>
        </details>

        <!-- Botones -->
        <div class="flex gap-3 pt-4 border-t">
          <button 
            type="button" 
            onclick="closeEventModal()"
            class="flex-1 px-6 py-3 border-2 border-gray-300 text-gray-700 font-semibold rounded-lg hover:bg-gray-50 transition-colors"
          >
            Cancelar
          </button>
          <button 
            type="submit"
            class="flex-1 px-6 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transition-all"
          >
            Guardar evento
          </button>
        </div>
      </form>
    </div>
  </div>
</div>

<script>
  // Funciones para el modal de ver evento
  function openViewEventModal(eventInfo) {
    console.log('üöÄ Abriendo modal para evento:', eventInfo.title);
    console.log('üìã Informaci√≥n completa:', eventInfo);
    
    const modal = document.getElementById('viewEventModal');
    const header = document.getElementById('viewEventHeader');
    const icon = document.getElementById('viewEventIcon');
    const badge = document.getElementById('viewEventBadge');
    
    // Configurar colores seg√∫n tipo
    const isRenta = eventInfo.extendedProps.tipo === 'renta';
    if (isRenta) {
      header.className = 'px-6 py-5 bg-gradient-to-r from-emerald-600 to-emerald-700';
      icon.className = 'rounded-full p-3 bg-emerald-500';
      badge.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold mt-1 bg-emerald-100 text-emerald-800';
      badge.innerHTML = 'üè† Renta';
    } else {
      header.className = 'px-6 py-5 bg-gradient-to-r from-blue-600 to-blue-700';
      icon.className = 'rounded-full p-3 bg-blue-500';
      badge.className = 'inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-semibold mt-1 bg-blue-100 text-blue-800';
      badge.innerHTML = 'üìã Reservaci√≥n';
    }
    
    // Llenar informaci√≥n
    document.getElementById('viewEventTitle').textContent = eventInfo.title;
    
    const startDate = eventInfo.start.toLocaleDateString('es-MX', { 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric' 
    });
    const endDate = eventInfo.end ? eventInfo.end.toLocaleDateString('es-MX', { 
      year: 'numeric', 
      month: 'long', 
      day: 'numeric' 
    }) : 'N/A';
    document.getElementById('viewEventDates').textContent = `${startDate} - ${endDate}`;
    
    // Mostrar/ocultar correo
    const emailContainer = document.getElementById('viewEventEmailContainer');
    const email = eventInfo.extendedProps.correo;
    if (email) {
      document.getElementById('viewEventEmail').textContent = email;
      emailContainer.classList.remove('hidden');
    } else {
      emailContainer.classList.add('hidden');
    }
    
    // Mostrar/ocultar tel√©fono
    const phoneContainer = document.getElementById('viewEventPhoneContainer');
    const phone = eventInfo.extendedProps.telefono;
    if (phone) {
      document.getElementById('viewEventPhone').textContent = phone;
      phoneContainer.classList.remove('hidden');
    } else {
      phoneContainer.classList.add('hidden');
    }
    
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
  }

  function closeViewEventModal() {
    const modal = document.getElementById('viewEventModal');
    modal.classList.add('hidden');
    document.body.style.overflow = 'auto';
  }

  // Funciones para el modal de crear evento
  function openEventModal(dateInfo = null) {
    const modal = document.getElementById('eventModal');
    modal.classList.remove('hidden');
    document.body.style.overflow = 'hidden';
    
    // Si se hace clic en una fecha, pre-llenar los campos
    if (dateInfo) {
      const date = new Date(dateInfo.dateStr || dateInfo.date);
      document.getElementById('eventDay').value = date.getDate();
      document.getElementById('eventMonth').value = date.getMonth() + 1;
      document.getElementById('eventYear').value = date.getFullYear();
      document.getElementById('eventHour').value = 13;
      document.getElementById('eventMinute').value = 0;
    } else {
      // Fecha actual por defecto
      const now = new Date();
      document.getElementById('eventDay').value = now.getDate();
      document.getElementById('eventMonth').value = now.getMonth() + 1;
      document.getElementById('eventYear').value = now.getFullYear();
      document.getElementById('eventHour').value = now.getHours();
      document.getElementById('eventMinute').value = now.getMinutes();
    }
  }

  function closeEventModal() {
    const modal = document.getElementById('eventModal');
    modal.classList.add('hidden');
    document.body.style.overflow = 'auto';
    document.getElementById('eventForm').reset();
  }

  // Cerrar modales con tecla ESC
  document.addEventListener('keydown', function(e) {
    if (e.key === 'Escape') {
      const viewModal = document.getElementById('viewEventModal');
      const createModal = document.getElementById('eventModal');
      
      if (!viewModal.classList.contains('hidden')) {
        closeViewEventModal();
      } else if (!createModal.classList.contains('hidden')) {
        closeEventModal();
      }
    }
  });

  document.addEventListener('DOMContentLoaded', async function() {
    const calendarEl = document.getElementById('calendar');

    // Bot√≥n nuevo evento
    document.getElementById('btnNewEvent').addEventListener('click', () => {
      openEventModal();
    });

    // Manejar env√≠o del formulario
    document.getElementById('eventForm').addEventListener('submit', async function(e) {
      e.preventDefault();
      
      const formData = {
        title: document.getElementById('eventName').value,
        day: document.getElementById('eventDay').value,
        month: document.getElementById('eventMonth').value,
        year: document.getElementById('eventYear').value,
        hour: document.getElementById('eventHour').value,
        minute: document.getElementById('eventMinute').value,
        tipo: document.querySelector('input[name="eventType"]:checked').value,
        correo: document.getElementById('eventEmail').value || '',
        telefono: document.getElementById('eventPhone').value || ''
      };

      try {
        // Aqu√≠ deber√≠as hacer la petici√≥n POST a tu API
        // const response = await fetch('/rooms/calendario/eventos', {
        //   method: 'POST',
        //   headers: { 'Content-Type': 'application/json' },
        //   body: JSON.stringify(formData)
        // });
        
        // Por ahora, solo mostramos un mensaje y recargamos
        alert('Evento creado exitosamente (funcionalidad de guardado pendiente)');
        closeEventModal();
        calendar.refetchEvents(); // Recargar eventos del calendario
      } catch (error) {
        console.error('Error al crear evento:', error);
        alert('Error al crear el evento');
      }
    });

    const calendar = new FullCalendar.Calendar(calendarEl, {
      initialView: 'dayGridMonth',
      height: 'auto',
      contentHeight: 650,
      locale: 'es',
      firstDay: 1,
      headerToolbar: {
        left: 'prev,next today',
        center: 'title',
        right: 'dayGridMonth,timeGridWeek,listWeek'
      },
      buttonText: {
        today: 'Hoy',
        month: 'Mes',
        week: 'Semana',
        list: 'Lista'
      },
      dateClick: function(info) {
        // Abrir modal de crear evento al hacer clic en una fecha vac√≠a
        console.log('üìÖ Clic en fecha:', info.dateStr);
        openEventModal(info);
      },
      eventClick: function(info) {
        // Abrir modal de visualizaci√≥n al hacer clic en un evento
        console.log('üî• Evento clickeado:', info.event.title);
        console.log('üìä Datos del evento:', info.event);
        info.jsEvent.preventDefault();
        info.jsEvent.stopPropagation();
        openViewEventModal(info.event);
      },
      eventDidMount: function(info) {
        // Aplicar clase seg√∫n tipo
        if (info.event.extendedProps.tipo === 'renta') {
          info.el.classList.add('event-renta');
        } else {
          info.el.classList.add('event-reservacion');
        }
        
        // Hacer el evento clickeable
        info.el.style.cursor = 'pointer';
        info.el.title = `Clic para ver detalles de ${info.event.title}`;
        
        // Agregar evento de clic manual como respaldo
        info.el.addEventListener('click', function(e) {
          console.log('üéØ Clic manual detectado en:', info.event.title);
          e.preventDefault();
          e.stopPropagation();
          openViewEventModal(info.event);
        });
        
        console.log('Evento montado:', info.event.title, 'Tipo:', info.event.extendedProps.tipo);
      },
      eventsSet: function(events) {
        // Debugging de eventos
        console.log('üìÖ Eventos recibidos del servidor:', events.length);
        console.log('üìã Lista de eventos:', events);
        
        if (events.length === 0) {
          console.log('‚ö†Ô∏è No hay eventos para mostrar');
        } else {
          events.forEach((event, index) => {
            console.log(`üìå Evento ${index + 1}:`, {
              title: event.title,
              start: event.start,
              end: event.end,
              tipo: event.extendedProps?.tipo,
              correo: event.extendedProps?.correo,
              telefono: event.extendedProps?.telefono
            });
          });
        }
        
        // Actualizar estad√≠sticas
        const totalEvents = events.length;
        const rentas = events.filter(e => e.extendedProps?.tipo === 'renta').length;
        const reservaciones = events.filter(e => e.extendedProps?.tipo === 'reservacion').length;
        
        document.getElementById('total-events').textContent = totalEvents;
        document.getElementById('total-rentas').textContent = rentas;
        document.getElementById('total-reservaciones').textContent = reservaciones;
        
        console.log('üìä Estad√≠sticas actualizadas:', { totalEvents, rentas, reservaciones });
      },
      eventSources: [
        {
          url: '/rooms/calendario/eventos',
          failure: function(error) {
            console.error('‚ùå Error cargando eventos:', error);
            alert('Error al cargar los eventos del calendario');
          }
        }
      ]
    });

    calendar.render();
    
    // Test manual del endpoint
    console.log('üîç Probando endpoint de eventos...');
    fetch('/rooms/calendario/eventos')
      .then(response => {
        console.log('üì° Respuesta del servidor:', response.status, response.statusText);
        return response.json();
      })
      .then(data => {
        console.log('üì¶ Datos recibidos del endpoint:', data);
      })
      .catch(error => {
        console.error('üí• Error en el endpoint:', error);
      });
  });
</script>

