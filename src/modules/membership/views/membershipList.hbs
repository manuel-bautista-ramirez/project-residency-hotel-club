<!-- Navbar-->
{{>navbar}}

<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 mt-20">
        <!-- Header con título y botones de acción -->
        <div class="flex flex-col sm:flex-row justify-between items-start sm:items-center mb-8 gap-4">
            <div>
                <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 tracking-tight">{{title}}</h1>
                <p class="text-gray-600 mt-1 text-sm sm:text-base">Gestiona todas las membresías del sistema</p>
            </div>

            <a href="/memberships/createMembership"
                class="inline-flex items-center justify-center px-6 py-3 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white font-semibold rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 w-full sm:w-auto">
                <i class="fas fa-plus-circle mr-2"></i>
                <span>Nueva Membresía</span>
            </a>
        </div>

        <!-- Sección de estadísticas -->
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6 mb-8">
            <!-- Total Membresías -->
            <div
                class="group relative bg-white rounded-2xl shadow-md hover:shadow-xl p-6 border-l-4 border-blue-500 transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
                <div class="absolute top-0 right-0 w-32 h-32 bg-blue-50 rounded-full -mr-16 -mt-16 opacity-50"></div>
                <div class="relative z-10">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <p class="text-gray-600 text-xs font-semibold uppercase tracking-wide mb-2">Total Membresías
                            </p>
                            <h3 class="text-4xl font-bold text-gray-900 mb-3" id="total-membresias">
                                {{estadisticas.total}}</h3>
                            <span
                                class="inline-flex items-center px-3 py-1 bg-blue-50 text-blue-700 text-xs font-medium rounded-full">
                                <i class="fas fa-database mr-1.5"></i>
                                Total registradas
                            </span>
                        </div>
                        <div class="flex-shrink-0 w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
                            <i class="fas fa-id-card-alt text-blue-600 text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Membresías Activas -->
            <div
                class="group relative bg-white rounded-2xl shadow-md hover:shadow-xl p-6 border-l-4 border-emerald-500 transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
                <div class="absolute top-0 right-0 w-32 h-32 bg-emerald-50 rounded-full -mr-16 -mt-16 opacity-50"></div>
                <div class="relative z-10">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <p class="text-gray-600 text-xs font-semibold uppercase tracking-wide mb-2">Membresías
                                Activas</p>
                            <h3 class="text-4xl font-bold text-gray-900 mb-3" id="activas-membresias">
                                {{estadisticas.activas}}</h3>
                            <span
                                class="inline-flex items-center px-3 py-1 bg-emerald-50 text-emerald-700 text-xs font-medium rounded-full">
                                <i class="fas fa-check-circle mr-1.5"></i>
                                En vigor
                            </span>
                        </div>
                        <div class="flex-shrink-0 w-12 h-12 bg-emerald-100 rounded-xl flex items-center justify-center">
                            <i class="fas fa-check-circle text-emerald-600 text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Por Vencer -->
            <div
                class="group relative bg-white rounded-2xl shadow-md hover:shadow-xl p-6 border-l-4 border-amber-500 transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
                <div class="absolute top-0 right-0 w-32 h-32 bg-amber-50 rounded-full -mr-16 -mt-16 opacity-50"></div>
                <div class="relative z-10">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <p class="text-gray-600 text-xs font-semibold uppercase tracking-wide mb-2">Por Vencer</p>
                            <h3 class="text-4xl font-bold text-gray-900 mb-3" id="por-vencer-membresias">
                                {{estadisticas.por_vencer}}</h3>
                            <span
                                class="inline-flex items-center px-3 py-1 bg-amber-50 text-amber-700 text-xs font-medium rounded-full">
                                <i class="fas fa-clock mr-1.5"></i>
                                Próximos 7 días
                            </span>
                        </div>
                        <div class="flex-shrink-0 w-12 h-12 bg-amber-100 rounded-xl flex items-center justify-center">
                            <i class="fas fa-exclamation-triangle text-amber-600 text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Vencidas -->
            <div
                class="group relative bg-white rounded-2xl shadow-md hover:shadow-xl p-6 border-l-4 border-red-500 transition-all duration-300 transform hover:-translate-y-1 overflow-hidden">
                <div class="absolute top-0 right-0 w-32 h-32 bg-red-50 rounded-full -mr-16 -mt-16 opacity-50"></div>
                <div class="relative z-10">
                    <div class="flex justify-between items-start">
                        <div class="flex-1">
                            <p class="text-gray-600 text-xs font-semibold uppercase tracking-wide mb-2">Vencidas</p>
                            <h3 class="text-4xl font-bold text-gray-900 mb-3" id="vencidas-membresias">
                                {{estadisticas.vencidas}}</h3>
                            <span
                                class="inline-flex items-center px-3 py-1 bg-red-50 text-red-700 text-xs font-medium rounded-full">
                                <i class="fas fa-times-circle mr-1.5"></i>
                                Necesitan renovación
                            </span>
                        </div>
                        <div class="flex-shrink-0 w-12 h-12 bg-red-100 rounded-xl flex items-center justify-center">
                            <i class="fas fa-times-circle text-red-600 text-xl"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Filtros y Búsqueda -->
        <div class="bg-white rounded-2xl shadow-md p-6 mb-8 border border-gray-100">
            <div class="flex flex-col lg:flex-row gap-4">
                <!-- Búsqueda -->
                <div class="flex-1 min-w-0">
                    <label class="block text-gray-700 text-sm font-semibold mb-2">
                        <i class="fas fa-search mr-1 text-blue-600"></i>
                        Búsqueda rápida
                    </label>
                    <div class="relative">
                        <input type="text" id="searchInput" placeholder="Buscar por nombre, teléfono o email..."
                            class="w-full pl-11 pr-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white text-sm">
                        <i class="fas fa-search absolute left-4 top-1/2 -translate-y-1/2 text-gray-400"></i>
                    </div>
                </div>

                <!-- Filtros -->
                <div class="grid grid-cols-1 sm:grid-cols-3 gap-4 lg:w-auto">
                    <!-- Filtro Estado -->
                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">
                            <i class="fas fa-filter mr-1 text-emerald-600"></i>
                            Estado
                        </label>
                        <select id="statusFilter"
                            class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white text-sm">
                            <option value="">Todos los Estados</option>
                            <option value="active">Activa</option>
                            <option value="expiring">Por Vencer</option>
                            <option value="expired">Vencida</option>
                            <option value="cancelled">Cancelada</option>
                            <option value="scheduled">Programada</option>
                        </select>
                    </div>

                    <!-- Filtro Tipo -->
                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">
                            <i class="fas fa-tag mr-1 text-purple-600"></i>
                            Tipo
                        </label>
                        <select id="typeFilter"
                            class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white text-sm">
                            <option value="">Todos los Tipos</option>
                            {{#each membershipTypes}}
                            <option value="{{this.id_tipo_membresia}}">{{this.nombre}}</option>
                            {{/each}}
                        </select>
                    </div>

                    <!-- Ordenar -->
                    <div>
                        <label class="block text-gray-700 text-sm font-semibold mb-2">
                            <i class="fas fa-sort-amount-down mr-1 text-indigo-600"></i>
                            Ordenar
                        </label>
                        <select id="sortBy"
                            class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-200 bg-white text-sm">
                            <option value="expiry">Próximas a vencer</option>
                            <option value="recent">Más recientes</option>
                            <option value="name">Orden alfabético</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tabla de membresías -->
        <div class="bg-white rounded-2xl shadow-md overflow-hidden border border-gray-100">
            <div class="overflow-x-auto">
                <table class="min-w-full divide-y divide-gray-200">
                    <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
                        <tr>
                            <th scope="col"
                                class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-user-circle text-blue-600"></i>
                                    <span>Miembro</span>
                                </div>
                            </th>
                            <th scope="col"
                                class="px-4 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-tag text-purple-600"></i>
                                    <span>Tipo</span>
                                </div>
                            </th>
                            <th scope="col"
                                class="hidden md:table-cell px-4 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-calendar-alt text-emerald-600"></i>
                                    <span>Periodo</span>
                                </div>
                            </th>
                            <th scope="col"
                                class="px-4 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                                <div class="flex items-center gap-2">
                                    <i class="fas fa-info-circle text-amber-600"></i>
                                    <span>Estado</span>
                                </div>
                            </th>
                            <th scope="col"
                                class="px-4 py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">
                                <div class="flex items-center justify-center gap-2">
                                    <i class="fas fa-cog text-indigo-600"></i>
                                    <span>Acciones</span>
                                </div>
                            </th>
                        </tr>
                    </thead>
                    <tbody class="bg-white divide-y divide-gray-100" id="membershipsTableBody">
                        {{#each memberships}}
                        <tr class="hover:bg-gray-50 transition-colors duration-150 membership-row"
                            data-days-until-expiry="{{this.daysUntilExpiry}}">
                            <!-- Miembro -->
                            <td class="px-6 py-4">
                                <div class="flex items-center gap-3">
                                    <div class="flex-shrink-0">
                                        <div
                                            class="w-12 h-12 rounded-full bg-gradient-to-br from-blue-100 to-indigo-100 flex items-center justify-center ring-2 ring-gray-100">
                                            <span class="text-blue-600 font-bold text-sm"
                                                data-initial="{{this.nombre_completo}}"></span>
                                        </div>
                                    </div>
                                    <div class="min-w-0 flex-1">
                                        <div class="text-sm font-semibold text-gray-900 truncate">
                                            {{this.nombre_completo}}</div>
                                        <div class="text-xs text-gray-500 flex items-center gap-1 mt-0.5">
                                            <i class="fas fa-phone-alt"></i>
                                            <span class="truncate">{{this.telefono}}</span>
                                        </div>
                                    </div>
                                </div>
                            </td>

                            <!-- Tipo -->
                            <td class="px-4 py-4">
                                {{#if this.isFamily}}
                                <span
                                    class="inline-flex items-center px-3 py-1.5 bg-gradient-to-r from-purple-100 to-fuchsia-100 text-purple-800 text-xs font-semibold rounded-full border border-purple-200">
                                    <i class="fas fa-users mr-1.5"></i>
                                    Familiar
                                </span>
                                {{else}}
                                <span
                                    class="inline-flex items-center px-3 py-1.5 bg-gradient-to-r from-blue-100 to-cyan-100 text-blue-800 text-xs font-semibold rounded-full border border-blue-200">
                                    <i class="fas fa-user mr-1.5"></i>
                                    {{this.tipo_membresia}}
                                </span>
                                {{/if}}
                            </td>

                            <!-- Periodo -->
                            <td class="hidden md:table-cell px-4 py-4">
                                <div class="text-sm text-gray-700 font-medium">{{formatPeriod this.fecha_inicio
                                    this.fecha_fin}}</div>
                            </td>

                            <!-- Estado -->
                            <td class="px-4 py-4">
                                <span
                                    class="inline-flex items-center px-3 py-1.5 {{this.statusClass}} text-xs font-semibold rounded-full">
                                    {{this.statusText}}
                                </span>
                            </td>

                            <!-- Acciones -->
                            <td class="px-4 py-4">
                                <div class="flex items-center justify-center gap-1.5 flex-wrap">
                                    {{#if this.isFamily}}
                                    <button
                                        class="view-members-btn p-2.5 rounded-lg bg-purple-50 text-purple-600 hover:bg-purple-100 hover:scale-105 transition-all duration-200 border border-purple-200"
                                        title="Ver integrantes" data-id-activa="{{this.id_activa}}">
                                        <i class="fas fa-users text-sm"></i>
                                    </button>
                                    {{/if}}

                                    <button
                                        class="view-details-btn p-2.5 rounded-lg bg-blue-50 text-blue-600 hover:bg-blue-100 hover:scale-105 transition-all duration-200 border border-blue-200"
                                        title="Ver detalles" data-id="{{this.id_activa}}">
                                        <i class="fas fa-eye text-sm"></i>
                                    </button>

                                    {{#if this.canRenew}}
                                    <a href="/memberships/renew/{{this.id_activa}}"
                                        class="inline-flex items-center justify-center p-2.5 rounded-lg bg-emerald-50 text-emerald-600 hover:bg-emerald-100 hover:scale-105 transition-all duration-200 border border-emerald-200"
                                        title="Renovar">
                                        <i class="fas fa-sync-alt text-sm"></i>
                                    </a>
                                    {{/if}}

                                    {{#if ../isAdmin}}
                                    <a href="/memberships/editMembership/{{this.id_activa}}"
                                        class="inline-flex items-center justify-center p-2.5 rounded-lg bg-amber-50 text-amber-600 hover:bg-amber-100 hover:scale-105 transition-all duration-200 border border-amber-200"
                                        title="Editar">
                                        <i class="fas fa-edit text-sm"></i>
                                    </a>
                                    {{/if}}

                                    <button
                                        class="view-history-payments-btn p-2.5 rounded-lg bg-indigo-50 text-indigo-600 hover:bg-indigo-100 hover:scale-105 transition-all duration-200 border border-indigo-200"
                                        title="Ver historial de pagos" data-id-activa="{{this.id_activa}}">
                                        <i class="fas fa-file-invoice-dollar text-sm"></i>
                                    </button>

                                    {{#if ../isAdmin}}
                                    <button type="button"
                                        class="delete-btn p-2.5 rounded-lg bg-red-50 text-red-600 hover:bg-red-100 hover:scale-105 transition-all duration-200 border border-red-200"
                                        action="/memberships/deleteMembership" title="Eliminar"
                                        data-id="{{this.id_activa}}" data-name="{{this.nombre_completo}}"
                                        data-type="{{#if this.isFamily}}Familiar{{else}}Individual{{/if}}">
                                        <i class="fas fa-trash-alt text-sm"></i>
                                    </button>
                                    {{/if}}
                                </div>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>

            <!-- Paginación -->
            <div
                class="px-6 py-4 bg-gradient-to-r from-gray-50 to-gray-100 border-t border-gray-200 flex flex-col sm:flex-row items-center justify-between gap-4">
                <div class="text-sm text-gray-700 font-medium">
                    Mostrando <span class="font-bold text-blue-600">{{memberships.length}}</span> de
                    <span class="font-bold text-blue-600">{{estadisticas.total}}</span> resultados
                </div>
                <div class="flex items-center gap-2">
                    <button
                        class="px-3 py-2 rounded-lg border-2 border-gray-300 text-gray-600 hover:bg-white hover:border-gray-400 hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 flex items-center gap-1">
                        <i class="fas fa-chevron-left text-xs"></i>
                        <span class="hidden sm:inline text-sm">Anterior</span>
                    </button>
                    <button
                        class="px-4 py-2 rounded-lg border-2 border-blue-600 bg-blue-600 text-white font-semibold shadow-md hover:bg-blue-700 transition-all duration-200">
                        1
                    </button>
                    <button
                        class="px-4 py-2 rounded-lg border-2 border-gray-300 text-gray-600 hover:bg-white hover:border-gray-400 hover:shadow-md transition-all duration-200">
                        2
                    </button>
                    <button
                        class="px-3 py-2 rounded-lg border-2 border-gray-300 text-gray-600 hover:bg-white hover:border-gray-400 hover:shadow-md disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200 flex items-center gap-1">
                        <span class="hidden sm:inline text-sm">Siguiente</span>
                        <i class="fas fa-chevron-right text-xs"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

{{!-- Modal Genérico para Confirmación/Notificación --}}
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
    <div class="bg-white rounded-2xl p-6 w-full max-w-md transform transition-all duration-300 shadow-2xl">
        <div class="flex items-center mb-4">
            <div id="deleteModalIconContainer" class="p-3 rounded-full mr-4">
                <i id="deleteModalIcon" class="text-xl"></i>
            </div>
            <h3 id="deleteModalTitle" class="text-xl font-semibold text-gray-800"></h3>
        </div>
        <p id="deleteModalMessage" class="text-gray-600 mb-6"></p>
        <div id="deleteModalButtons" class="flex justify-end gap-3 flex-wrap">
            <!-- Los botones se insertarán aquí dinámicamente -->
        </div>
    </div>
</div>

<!-- Templates para Modales -->
<template id="integrantes-modal-template">
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-2xl p-6 w-full max-w-md shadow-2xl transform transition-all duration-300">
            <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fas fa-users text-purple-500"></i>
                <span>Integrantes de la Membresía</span>
            </h3>
            <div class="max-h-80 overflow-y-auto">
                <table class="min-w-full">
                    <thead class="bg-gray-50 sticky top-0">
                        <tr>
                            <th class="text-left text-sm font-medium text-gray-700 py-3 px-4 rounded-lg">Nombre</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100" data-template-content="integrantes-list">
                        <!-- Los integrantes se insertarán aquí -->
                    </tbody>
                </table>
            </div>
            <div class="mt-6 flex justify-end">
                <button
                    class="px-5 py-2.5 bg-gradient-to-r from-purple-600 to-indigo-600 text-white font-semibold rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5 close-integrantes-modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</template>

<template id="details-modal-template">
    <div class="fixed inset-0 bg-black bg-opacity-60 flex items-center justify-center z-50 p-4">
        <div
            class="bg-white rounded-2xl p-8 w-full max-w-3xl max-h-[90vh] overflow-y-auto shadow-2xl transform transition-all duration-300">
            <div class="flex justify-between items-center mb-6">
                <h3 class="text-2xl font-bold text-gray-800 flex items-center gap-3">
                    <i class="fas fa-id-card-alt text-blue-500"></i>
                    <span>Detalles de la Membresía</span>
                </h3>
                <button
                    class="text-gray-400 hover:text-gray-600 transition-colors duration-300 close-details-modal p-2">
                    <i class="fas fa-times text-2xl"></i>
                </button>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-4" data-template-content="details-info">
                    <!-- La información de detalles se insertará aquí -->
                </div>
                <div class="flex flex-col items-center justify-center bg-gray-50 p-6 rounded-xl border-2 border-gray-200"
                    data-template-content="details-qr">
                    <!-- El QR se insertará aquí -->
                </div>
            </div>
            <div class="mt-8 flex justify-end">
                <button
                    class="px-6 py-2.5 bg-gray-200 text-gray-700 font-semibold rounded-xl hover:bg-gray-300 transition-all duration-300 transform hover:-translate-y-0.5 close-details-modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</template>

<template id="payments-history-modal-template">
    <div class="fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50 p-4">
        <div class="bg-white rounded-2xl p-6 w-full max-w-2xl shadow-2xl transform transition-all duration-300">
            <h3 class="text-lg font-semibold text-gray-800 mb-4 flex items-center gap-2">
                <i class="fas fa-file-invoice-dollar text-indigo-500"></i>
                <span>Historial de Pagos</span>
            </h3>
            <div class="max-h-96 overflow-y-auto">
                <table class="min-w-full">
                    <thead class="bg-gray-50 sticky top-0">
                        <tr class="border-b">
                            <th class="text-left text-sm font-medium text-gray-700 py-3 px-4">Fecha</th>
                            <th class="text-left text-sm font-medium text-gray-700 py-3 px-4">Método</th>
                            <th class="text-right text-sm font-medium text-gray-700 py-3 px-4">Monto</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-100" data-template-content="payments-list">
                        <!-- Los pagos se insertarán aquí -->
                    </tbody>
                </table>
            </div>
            <div class="mt-6 flex justify-end">
                <button
                    class="px-5 py-2.5 bg-gradient-to-r from-indigo-600 to-purple-600 text-white font-semibold rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-0.5 close-payments-modal">
                    Cerrar
                </button>
            </div>
        </div>
    </div>
</template>

<script src="/js/moduleMembershipJs/listMembership.js"></script>
<script src="/js/moduleMembershipJs/deleteMembership.js"></script>