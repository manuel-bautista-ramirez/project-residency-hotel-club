<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crear Nueva Membresía</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .gradient-bg {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        .card-hover {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card-hover:hover {
            transform: translateY(-5px);
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
        }
        .preview-card {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
            color: white;
        }
    </style>
</head>
<body class="bg-gray-100 min-h-screen">
    <!-- Header -->
    <header class="gradient-bg text-white shadow-lg">
        <div class="container mx-auto px-4 py-6">
            <div class="flex justify-between items-center">
                <div class="flex items-center space-x-2">
                    <i class="fas fa-crown text-2xl"></i>
                    <h1 class="text-2xl font-bold">Sistema de Membresías</h1>
                </div>
                <nav>
                    <ul class="flex space-x-6">
                        <li><a href="#" class="hover:text-blue-200 transition"><i class="fas fa-home mr-1"></i> Inicio</a></li>
                        <li><a href="#" class="hover:text-blue-200 transition"><i class="fas fa-list mr-1"></i> Membresías</a></li>
                        <li><a href="#" class="font-bold border-b-2 border-white"><i class="fas fa-plus-circle mr-1"></i> Crear</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main class="container mx-auto px-4 py-8">
        <div class="text-center mb-10">
            <h2 class="text-3xl font-bold text-gray-800">Crear Nueva Membresía</h2>
            <p class="text-gray-600 mt-2">Complete el formulario para agregar un nuevo tipo de membresía al sistema</p>
        </div>

        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
            <!-- Formulario -->
            <div class="bg-white rounded-xl shadow-md p-6 card-hover">
                <h3 class="text-xl font-semibold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-pencil-alt mr-2 text-blue-500"></i> Información de la Membresía
                </h3>
                
                <form id="membershipForm" class="space-y-6">
                    <div>
                        <label for="name" class="block text-sm font-medium text-gray-700 mb-1">Nombre de la Membresía</label>
                        <input type="text" id="name" name="name" required 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                            placeholder="Ej: Membresía Premium">
                    </div>

                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label for="price" class="block text-sm font-medium text-gray-700 mb-1">Precio ($)</label>
                            <input type="number" id="price" name="price" min="0" step="0.01" required 
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                placeholder="0.00">
                        </div>
                        
                        <div>
                            <label for="duration" class="block text-sm font-medium text-gray-700 mb-1">Duración (días)</label>
                            <input type="number" id="duration" name="duration" min="1" required 
                                class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                                placeholder="30">
                        </div>
                    </div>

                    <div>
                        <label for="description" class="block text-sm font-medium text-gray-700 mb-1">Descripción</label>
                        <textarea id="description" name="description" rows="3" required 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition"
                            placeholder="Describa los beneficios de esta membresía..."></textarea>
                    </div>

                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Beneficios Incluidos</label>
                        <div class="grid grid-cols-2 gap-3">
                            <label class="flex items-center">
                                <input type="checkbox" name="benefits" value="acceso_completo" class="rounded text-blue-600 focus:ring-blue-500">
                                <span class="ml-2 text-sm text-gray-700">Acceso completo</span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" name="benefits" value="descuentos" class="rounded text-blue-600 focus:ring-blue-500">
                                <span class="ml-2 text-sm text-gray-700">Descuentos</span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" name="benefits" value="soporte_prioritario" class="rounded text-blue-600 focus:ring-blue-500">
                                <span class="ml-2 text-sm text-gray-700">Soporte prioritario</span>
                            </label>
                            <label class="flex items-center">
                                <input type="checkbox" name="benefits" value="contenido_exclusivo" class="rounded text-blue-600 focus:ring-blue-500">
                                <span class="ml-2 text-sm text-gray-700">Contenido exclusivo</span>
                            </label>
                        </div>
                    </div>

                    <div>
                        <label for="status" class="block text-sm font-medium text-gray-700 mb-1">Estado</label>
                        <select id="status" name="status" 
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition">
                            <option value="active">Activa</option>
                            <option value="inactive">Inactiva</option>
                        </select>
                    </div>

                    <div class="flex justify-end space-x-4 pt-4">
                        <button type="button" class="px-5 py-2 bg-gray-300 text-gray-700 rounded-lg hover:bg-gray-400 transition">
                            Cancelar
                        </button>
                        <button type="submit" class="px-5 py-2 gradient-bg text-white rounded-lg hover:opacity-90 transition flex items-center">
                            <i class="fas fa-save mr-2"></i> Crear Membresía
                        </button>
                    </div>
                </form>
            </div>

            <!-- Vista Previa -->
            <div class="bg-white rounded-xl shadow-md p-6 card-hover">
                <h3 class="text-xl font-semibold text-gray-800 mb-6 flex items-center">
                    <i class="fas fa-eye mr-2 text-purple-500"></i> Vista Previa
                </h3>
                
                <div class="preview-card rounded-xl p-6 shadow-inner">
                    <div class="text-center mb-6">
                        <i class="fas fa-crown text-4xl mb-3"></i>
                        <h4 id="previewName" class="text-2xl font-bold">Nombre de Membresía</h4>
                        <p id="previewDescription" class="text-white text-opacity-90 mt-2">Descripción de la membresía</p>
                    </div>
                    
                    <div class="bg-white bg-opacity-20 rounded-lg p-4 mb-4">
                        <div class="flex justify-between items-center mb-2">
                            <span>Precio:</span>
                            <span id="previewPrice" class="font-bold">$0.00</span>
                        </div>
                        <div class="flex justify-between items-center">
                            <span>Duración:</span>
                            <span id="previewDuration" class="font-bold">0 días</span>
                        </div>
                    </div>
                    
                    <div class="mb-4">
                        <h5 class="font-semibold mb-2">Beneficios:</h5>
                        <ul id="previewBenefits" class="list-disc list-inside text-sm text-white text-opacity-90">
                            <li>Los beneficios aparecerán aquí</li>
                        </ul>
                    </div>
                    
                    <div class="text-center">
                        <span id="previewStatus" class="px-3 py-1 bg-white bg-opacity-30 rounded-full text-xs font-medium">Estado</span>
                    </div>
                </div>
                
                <div class="mt-6 bg-blue-50 rounded-lg p-4">
                    <h5 class="font-semibold text-blue-800 flex items-center">
                        <i class="fas fa-info-circle mr-2"></i> Información
                    </h5>
                    <p class="text-sm text-blue-600 mt-1">
                        Esta vista previa se actualizará automáticamente mientras completa el formulario.
                    </p>
                </div>
            </div>
        </div>
    </main>

    <footer class="bg-gray-800 text-white mt-12 py-8">
        <div class="container mx-auto px-4 text-center">
            <p>Sistema de Gestión de Membresías © 2023 - Todos los derechos reservados</p>
        </div>
    </footer>

    <script>
        // Funcionalidad para actualizar la vista previa en tiempo real
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('membershipForm');
            const previewName = document.getElementById('previewName');
            const previewDescription = document.getElementById('previewDescription');
            const previewPrice = document.getElementById('previewPrice');
            const previewDuration = document.getElementById('previewDuration');
            const previewBenefits = document.getElementById('previewBenefits');
            const previewStatus = document.getElementById('previewStatus');
            
            // Actualizar vista previa cuando cambian los valores
            form.addEventListener('input', updatePreview);
            form.addEventListener('change', updatePreview);
            
            function updatePreview() {
                // Actualizar nombre
                previewName.textContent = document.getElementById('name').value || 'Nombre de Membresía';
                
                // Actualizar descripción
                previewDescription.textContent = document.getElementById('description').value || 'Descripción de la membresía';
                
                // Actualizar precio
                const price = document.getElementById('price').value;
                previewPrice.textContent = price ? `$${parseFloat(price).toFixed(2)}` : '$0.00';
                
                // Actualizar duración
                const duration = document.getElementById('duration').value;
                previewDuration.textContent = duration ? `${duration} días` : '0 días';
                
                // Actualizar beneficios
                const benefits = Array.from(document.querySelectorAll('input[name="benefits"]:checked'))
                    .map(checkbox => {
                        const value = checkbox.value;
                        // Convertir el valor a un texto más legible
                        return value.split('_').map(word => 
                            word.charAt(0).toUpperCase() + word.slice(1)
                        ).join(' ');
                    });
                
                if (benefits.length > 0) {
                    previewBenefits.innerHTML = benefits.map(benefit => `<li>${benefit}</li>`).join('');
                } else {
                    previewBenefits.innerHTML = '<li>Los beneficios aparecerán aquí</li>';
                }
                
                // Actualizar estado
                const status = document.getElementById('status').value;
                previewStatus.textContent = status === 'active' ? 'Activa' : 'Inactiva';
            }
            
            // Manejar el envío del formulario
            form.addEventListener('submit', function(e) {
                e.preventDefault();
                
                // Simular envío exitoso
                alert('¡Membresía creada con éxito!');
                form.reset();
                updatePreview();
            });
            
            // Inicializar la vista previa
            updatePreview();
        });
    </script>
</body>
</html>