<!-- Navbar -->
{{> navbar}}

<div class="container mx-auto px-4 py-6 mt-20">
    <!-- Header -->
    <div class="flex flex-col md:flex-row justify-between items-start md:items-center mb-8">
        <div>
            <h1 class="text-3xl font-bold text-gray-800">Editar Membresía</h1>
            <p class="text-gray-600 mt-2">Modifica los datos de la membresía #{{membership.id_activa}}</p>
        </div>

        <div class="flex flex-wrap gap-3 mt-4 md:mt-0">
            <a href="/memberships/listMembership"
                class="bg-gradient-to-r from-gray-600 to-gray-700 hover:from-gray-700 hover:to-gray-800 text-white px-5 py-2.5 rounded-xl font-medium flex items-center transition-all duration-300 transform hover:-translate-y-0.5 shadow-lg hover:shadow-xl">
                <i class="fas fa-arrow-left mr-2"></i> Volver
            </a>
        </div>
    </div>

    <!-- Formulario de edición -->
    <form id="editMembershipForm" action="/memberships/updateMembership/{{membership.id_activa}}" method="POST"
        class="bg-white rounded-2xl shadow-xl p-8 mb-8 border-2 border-gray-200">
        <input type="hidden" id="id_activa" name="id_activa" value="{{membership.id_activa}}">

        <!-- Mensaje de Alerta -->
        <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded-lg mb-8" role="alert">
            <p><strong>Nota:</strong> En esta sección solo puedes modificar datos generales.</p>
        </div>

        <!-- Información del cliente -->
        <div class="mb-8">
            <div class="flex items-center mb-6">
                <div class="bg-gradient-to-br from-blue-500 to-purple-600 p-3 rounded-xl mr-4 shadow-md">
                    <i class="fas fa-user-circle text-white text-xl"></i>
                </div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                    Información del Cliente
                </h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="space-y-2">
                    <label class="block text-gray-700 text-sm font-semibold mb-2" for="nombre_completo">
                        Nombre Completo *
                    </label>
                    <input type="text" id="nombre_completo" name="nombre_completo"
                        value="{{membership.nombre_completo}}"
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300"
                        required>
                </div>

                <div class="space-y-2">
                    <label class="block text-gray-700 text-sm font-semibold mb-2" for="telefono">
                        Teléfono
                    </label>
                    <input type="tel" id="telefono" name="telefono" value="{{membership.telefono}}"
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300">
                </div>

                <div class="space-y-2">
                    <label class="block text-gray-700 text-sm font-semibold mb-2" for="correo">
                        Correo Electrónico
                    </label>
                    <input type="email" id="correo" name="correo" value="{{membership.correo}}"
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300">
                </div>
            </div>
        </div>

        <!-- Información de la membresía -->
        <div class="mb-8">
            <div class="flex items-center mb-6">
                <div class="bg-gradient-to-br from-indigo-500 to-purple-600 p-3 rounded-xl mr-4 shadow-md">
                    <i class="fas fa-id-card-alt text-white text-xl"></i>
                </div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                    Información de la Membresía
                </h2>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="space-y-2">
                    <label class="block text-gray-700 text-sm font-semibold mb-2" for="tipo_membresia">
                        Tipo de Membresía
                    </label>
                    <input type="text" id="tipo_membresia" name="tipo_membresia" value="{{membership.tipo}}"
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl bg-gray-50 text-gray-600 cursor-not-allowed font-medium"
                        readonly>
                </div>

                <div class="space-y-2">
                    <label class="block text-gray-700 text-sm font-semibold mb-2" for="estado">
                        Estado *
                    </label>
                    <select id="estado" name="estado"
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-300 hover:border-gray-300 appearance-none bg-white"
                        required>
                        <option value="Activa" {{#if (eq membership.estado "Activa" )}}selected{{/if}}>Activa
                        </option>
                        <option value="Cancelada" {{#if (eq membership.estado "Cancelada" )}}selected{{/if}}>Cancelada
                        </option>
                        <option value="Vencida" {{#if (eq membership.estado "Vencida" )}}selected{{/if}}>Vencida
                        </option>
                    </select>
                    <p class="text-xs text-gray-500 mt-2 flex items-center">
                        <i class="fas fa-info-circle mr-1 text-blue-500"></i>
                        Solo un administrador debería cambiar el estado manualmente.
                    </p>
                </div>

                <div class="space-y-2">
                    <label class="block text-gray-700 text-sm font-semibold mb-2" for="fecha_inicio">
                        Fecha de Inicio *
                    </label>
                    <input type="date" id="fecha_inicio" name="fecha_inicio"
                        value="{{formatDate membership.fecha_inicio}}"
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl bg-gray-50 text-gray-600 cursor-not-allowed font-medium"
                        readonly>
                </div>

                <div class="space-y-2">
                    <label class="block text-gray-700 text-sm font-semibold mb-2" for="fecha_fin">
                        Fecha de Vencimiento
                    </label>
                    <input type="date" id="fecha_fin" name="fecha_fin" value="{{formatDate membership.fecha_fin}}"
                        class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl bg-gray-50 text-gray-600 cursor-not-allowed font-medium"
                        readonly>
                </div>

                <div class="space-y-2">
                    <label class="block text-gray-700 text-sm font-semibold mb-2" for="precio_final">
                        Precio Pagado
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none">
                            <span class="text-gray-500 font-medium">$</span>
                        </div>
                        <input type="number" id="precio_final" name="precio_final" value="{{membership.precio_final}}"
                            step="0.01" min="0"
                            class="pl-10 w-full px-4 py-3 border-2 border-gray-200 rounded-xl bg-gray-50 text-gray-600 cursor-not-allowed font-medium"
                            readonly>
                    </div>
                </div>
            </div>
        </div>

        <!-- Sección de integrantes (solo para membresías familiares) -->
        {{#if (eq membership.tipo "Familiar")}}
        <div class="mb-8">
            <div class="flex items-center mb-6">
                <div class="bg-gradient-to-br from-purple-500 to-indigo-600 p-3 rounded-xl mr-4 shadow-md">
                    <i class="fas fa-users text-white text-xl"></i>
                </div>
                <h2 class="text-2xl font-bold bg-gradient-to-r from-gray-800 to-gray-600 bg-clip-text text-transparent">
                    Integrantes
                </h2>
            </div>

            <div id="integrantesContainer" class="space-y-6">
                {{#each membership.integrantes}}
                <div class="integrante-item bg-gray-50 p-6 rounded-2xl border border-gray-200">
                    <input type="hidden" name="integrantes[{{@index}}][id_integrante]" value="{{this.id_integrante}}">
                    <div class="grid grid-cols-1 md:grid-cols-4 gap-6 items-center">
                        <div class="md:col-span-4 space-y-2">
                            <label class="block text-gray-700 text-sm font-semibold mb-2">Nombre Completo Integrante {{@index_1}}</label>
                            <input type="text" name="integrantes[{{@index}}][nombre_completo]" value="{{this.nombre_completo}}" class="w-full px-4 py-3 border-2 border-gray-200 rounded-xl focus:outline-none focus:ring-2 focus:ring-blue-500 transition-all duration-300">
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
        {{/if}}

        <!-- Botones de acción -->
        <div class="flex justify-end space-x-4 pt-8 border-t-2 border-gray-200">
            <a href="/memberships/listMembership"
                class="inline-flex items-center px-6 py-3 border-2 border-gray-300 shadow-sm text-sm font-semibold rounded-xl text-gray-700 bg-white hover:bg-gray-50 hover:border-gray-400 transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <i class="fas fa-times mr-2"></i> Cancelar
            </a>
            <button type="submit"
                class="inline-flex items-center px-6 py-3 border border-transparent text-sm font-semibold rounded-xl shadow-lg text-white bg-gradient-to-r from-blue-600 to-purple-600 hover:from-blue-700 hover:to-purple-700 transform hover:-translate-y-0.5 transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-blue-500">
                <i class="fas fa-save mr-2"></i> Guardar Cambios
            </button>
        </div>
    </form>
</div>

<!-- Incluir los scripts externos -->
<script type="module" src="/js/moduleMembershipJs/validator.js"></script>
<script type="module" src="/js/moduleMembershipJs/editMembership.js"></script>