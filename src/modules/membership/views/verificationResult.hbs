{{!-- Usamos el layout principal --}}
<div class="min-h-screen flex items-center justify-center bg-gray-100 font-sans">
  <div class="p-8 rounded-lg shadow-lg text-center text-white w-full max-w-md {{statusColor}}">

    <h1 class="text-3xl font-bold mb-4">
      {{ message }}
    </h1>

    {{#if membership}}
      <div class="bg-white bg-opacity-20 p-6 rounded-lg text-left">
        <p class="text-lg mb-2">
          <strong>Titular:</strong> {{ membership.nombre_completo }}
        </p>
        <p class="text-lg mb-2">
          <strong>Tipo de Membres√≠a:</strong> {{ membership.tipo_membresia }}
        </p>
        <p class="text-lg">
          <strong>Fecha de Vencimiento:</strong> {{#if helpers.formatDate}}{{helpers.formatDate membership.fecha_fin}}{{else}}{{membership.fecha_fin}}{{/if}}
        </p>
      </div>
    {{/if}}

  </div>
</div>
