  </div>

  {{#if sales}}
  <!-- Tabla de ventas (Desktop Large) -->
  <div class="bg-white rounded-2xl shadow-md overflow-hidden hidden lg:block">
    <div id="salesTableWrapper" class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gradient-to-r from-slate-50 to-slate-100 sticky top-0 z-10">
          <tr>
            <th class="px-3 py-2 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">ID</th>
            <th class="px-3 py-2 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Cliente</th>
            <th class="px-3 py-2 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Fecha</th>
            <th class="px-3 py-2 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Tipo de Pago</th>
            <th class="px-3 py-2 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Productos</th>
            <th class="px-3 py-2 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Total</th>
            <th class="px-3 py-2 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">Usuario</th>
            <th class="px-3 py-2 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody id="salesTableBody" class="bg-white divide-y divide-gray-200">
          {{#each sales}}
          <tr class="transition-colors duration-200 hover:bg-slate-50">
            <td class="px-3 py-2 whitespace-nowrap text-sm font-bold text-gray-900">
              #{{this.id}}
            </td>
            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700">
              {{#if this.nombre_cliente}}
              <div class="flex items-center">
                <div class="h-6 w-6 rounded-full bg-blue-100 flex items-center justify-center mr-2 text-blue-600">
                  <i class="fas fa-user text-xs"></i>
                </div>
                {{this.nombre_cliente}}
              </div>
              {{else}}
              <span class="text-gray-400 italic text-xs">Sin nombre</span>
              {{/if}}
            </td>
            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700">
              {{formatDate this.fecha_venta}}
            </td>
            <td class="px-3 py-2 whitespace-nowrap">
              {{#if (eq this.tipo_pago "efectivo")}}
              <span
                class="inline-flex px-2 py-0.5 text-xs font-bold rounded-full text-green-700 bg-green-100 border border-green-200">
                <i class="fas fa-money-bill-wave mr-1 mt-0.5"></i> Efectivo
              </span>
              {{else if (eq this.tipo_pago "transferencia")}}
              <span
                class="inline-flex px-2 py-0.5 text-xs font-bold rounded-full text-blue-700 bg-blue-100 border border-blue-200">
                <i class="fas fa-university mr-1 mt-0.5"></i> Transf.
              </span>
              {{else if (eq this.tipo_pago "tarjeta")}}
              <span
                class="inline-flex px-2 py-0.5 text-xs font-bold rounded-full text-purple-700 bg-purple-100 border border-purple-200">
                <i class="fas fa-credit-card mr-1 mt-0.5"></i> Tarjeta
              </span>
              {{/if}}
            </td>
            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700 text-center">
              <span
                class="bg-gray-100 text-gray-700 px-2 py-0.5 rounded-md font-bold text-xs">{{this.total_productos}}</span>
            </td>
            <td class="px-3 py-2 whitespace-nowrap text-sm font-bold text-blue-600">
              ${{this.total}}
            </td>
            <td class="px-3 py-2 whitespace-nowrap text-sm text-gray-700">
              <span class="text-xs text-slate-500 bg-slate-100 px-2 py-0.5 rounded-full">{{this.usuario}}</span>
            </td>
            <td class="px-3 py-2 whitespace-nowrap text-center">
              <div class="flex items-center justify-center space-x-1">
                <a href="/store/sales/{{this.id}}"
                  class="p-1.5 text-blue-600 hover:text-blue-900 hover:bg-blue-50 rounded-lg transition-all duration-200 hover:scale-110"
                  title="Ver detalle">
                  <i class="fas fa-eye text-sm"></i>
                </a>

                {{#if this.pdf_path}}
                <a href="{{this.pdf_path}}" target="_blank"
                  class="p-1.5 text-red-600 hover:text-red-900 hover:bg-red-50 rounded-lg transition-all duration-200 hover:scale-110"
                  title="Ver PDF">
                  <i class="fas fa-file-pdf text-sm"></i>
                </a>
                {{/if}}

                {{#if (eq ../user.role "Administrador")}}
                <button onclick="deleteSale({{this.id}})"
                  class="p-1.5 text-red-600 hover:text-red-900 hover:bg-red-50 rounded-lg transition-all duration-200 hover:scale-110"
                  title="Eliminar">
                  <i class="fas fa-trash text-sm"></i>
                </button>
                {{/if}}
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Vista Cards (Resposive: Mobile & Tablet) -->
  <div class="lg:hidden grid grid-cols-1 md:grid-cols-2 gap-4">
    {{#each sales}}
    <div class="bg-white rounded-xl shadow-sm border border-gray-100 p-4 animate-fade-in">
      <div class="flex justify-between items-start mb-3">
        <div>
          <span class="text-xs font-bold text-gray-400 uppercase tracking-wider">Venta #{{this.id}}</span>
          <div class="font-bold text-gray-900 mt-0.5 flex items-center gap-1.5">
            {{#if this.nombre_cliente}}
            {{this.nombre_cliente}}
            {{else}}
            <span class="text-gray-400 italic font-normal">Sin nombre</span>
            {{/if}}
          </div>
          <div class="text-xs text-gray-500 mt-1 flex items-center gap-1">
            <i class="far fa-clock"></i> {{formatDate this.fecha_venta}}
          </div>
        </div>
        <div class="text-right">
          <div class="text-lg font-bold text-blue-600">${{this.total}}</div>
          <span class="text-xs font-medium text-gray-500 bg-gray-100 px-2 py-0.5 rounded-full">{{this.total_productos}}
            prods.</span>
        </div>
      </div>

      <div class="flex justify-between items-center bg-slate-50 p-2.5 rounded-lg mb-3 border border-slate-100">
        <span class="text-xs font-semibold text-gray-600">Método de Pago:</span>
        {{#if (eq this.tipo_pago "efectivo")}}
        <span
          class="inline-flex px-2 py-0.5 text-xs font-bold rounded-full text-green-700 bg-green-100 border border-green-200 items-center">
          <i class="fas fa-money-bill-wave mr-1.5"></i> Efectivo
        </span>
        {{else if (eq this.tipo_pago "transferencia")}}
        <span
          class="inline-flex px-2 py-0.5 text-xs font-bold rounded-full text-blue-700 bg-blue-100 border border-blue-200 items-center">
          <i class="fas fa-university mr-1.5"></i> Transf.
        </span>
        {{else if (eq this.tipo_pago "tarjeta")}}
        <span
          class="inline-flex px-2 py-0.5 text-xs font-bold rounded-full text-purple-700 bg-purple-100 border border-purple-200 items-center">
          <i class="fas fa-credit-card mr-1.5"></i> Tarjeta
        </span>
        {{/if}}
      </div>

      <div class="flex justify-between items-center border-t border-gray-100 pt-3 mt-2">
        <span class="text-xs text-slate-500 font-medium flex items-center gap-1.5">
          <div class="w-5 h-5 rounded-full bg-slate-200 flex items-center justify-center text-slate-500">
            <i class="fas fa-user text-[10px]"></i>
          </div>
          {{this.usuario}}
        </span>
        <div class="flex gap-2">
          <a href="/store/sales/{{this.id}}"
            class="p-2 text-blue-600 bg-blue-50 hover:bg-blue-100 rounded-lg transition-colors">
            <i class="fas fa-eye"></i>
          </a>
          {{#if this.pdf_path}}
          <a href="{{this.pdf_path}}" target="_blank"
            class="p-2 text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition-colors">
            <i class="fas fa-file-pdf"></i>
          </a>
          {{/if}}
          {{#if (eq ../user.role "Administrador")}}
          <button onclick="deleteSale({{this.id}})"
            class="p-2 text-red-600 bg-red-50 hover:bg-red-100 rounded-lg transition-colors">
            <i class="fas fa-trash"></i>
          </button>
          {{/if}}
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{else}}
  <!-- Estado vacío -->
  <div class="bg-white rounded-2xl shadow-md p-12 text-center border-slate-100">
    <div class="bg-slate-50 rounded-full w-3 h-9 flex items-center justify-center mx-auto mb-4">
      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-12 h-12 text-slate-300">
        <path fill-rule="evenodd"
          d="M7.502 6h7.128A3.375 3.375 0 0118 9.375v9.375a3 3 0 003-3V6.108c0-1.505-1.125-2.811-2.664-2.94a48.972 48.972 0 00-.673-.05A3 3 0 0015 1.5h-1.5a3 3 0 00-2.663 1.618c-.225.015-.45.032-.673.05C8.662 3.295 7.554 4.542 7.502 6zM13.5 3A1.5 1.5 0 0012 4.5h4.5A1.5 1.5 0 0015 3h-1.5z"
          clip-rule="evenodd" />
        <path fill-rule="evenodd"
          d="M3 9.375C3 8.339 3.84 7.5 4.875 7.5h9.75c1.036 0 1.875.84 1.875 1.875v11.25c0 1.035-.84 1.875-1.875 1.875h-9.75A1.875 1.875 0 013 20.625V9.375zM6 12a.75.75 0 01.75-.75h.008a.75.75 0 01.75.75v.008a.75.75 0 01-.75.75H6.75a.75.75 0 01-.75-.75V12zm2.25 0a.75.75 0 01.75-.75h3.75a.75.75 0 010 1.5H9a.75.75 0 01-.75-.75zM6 15a.75.75 0 01.75-.75h.008a.75.75 0 01.75.75v.008a.75.75 0 01-.75.75H6.75a.75.75 0 01-.75-.75V15zm2.25 0a.75.75 0 01.75-.75h3.75a.75.75 0 010 1.5H9a.75.75 0 01-.75-.75zM6 18a.75.75 0 01.75-.75h.008a.75.75 0 01.75.75v.008a.75.75 0 01-.75.75H6.75a.75.75 0 01-.75-.75V18zm2.25 0a.75.75 0 01.75-.75h3.75a.75.75 0 010 1.5H9a.75.75 0 01-.75-.75z"
          clip-rule="evenodd" />
      </svg>
    </div>
    <h3 class="text-xl font-bold text-gray-900 mb-2">No hay ventas registradas</h3>
    <p class="text-gray-500 mb-6 max-w-sm mx-auto">Las ventas realizadas aparecerán aquí. Comienza registrando una
      venta
