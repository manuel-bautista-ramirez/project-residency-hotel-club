<!-- Navigation Header -->
<div class="bg-white shadow-sm border-b border-slate-200 sticky top-0 z-30 pt-10">
  <div class="w-full px-3 sm:px-4 lg:px-8">
    <div class="mt-2 w-full border-t border-slate-100 pt-3">
      {{> storeNavButtons activePage="inventory" user=user}}
    </div>

  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>
<!-- Content -->
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 animate-fade-in">

  <!-- Resumen por Categor칤a -->
  <div class="bg-white rounded-xl shadow-md p-6 mb-8">
    <h3 class="text-xl font-bold text-gray-900 mb-6">游늵 Inventario por Categor칤a</h3>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categor칤a</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Productos</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Total</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Valor Inventario
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio Promedio
            </th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Min/Max
            </th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {{#each inventoryReport.por_categoria}}
          <tr>
            <td class="px-6 py-4 whitespace-nowrap">
              <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
                  {{#if (eq categoria 'bebidas')}}bg-blue-100 text-blue-800{{/if}}
                  {{#if (eq categoria 'snacks')}}bg-yellow-100 text-yellow-800{{/if}}
                  {{#if (eq categoria 'comida')}}bg-green-100 text-green-800{{/if}}
                  {{#if (eq categoria 'otros')}}bg-purple-100 text-purple-800{{/if}}">
                {{categoria}}
              </span>
            </td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{total_productos}}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{stock_total}}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-600">${{valor_inventario}}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${{precio_promedio}}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{stock_minimo}} / {{stock_maximo}}</td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

  <!-- Productos con Stock Bajo -->
  {{#if lowStockProducts}}
  <div class="bg-white rounded-xl shadow-md p-6">
    <h3 class="text-xl font-bold text-gray-900 mb-6">丘멆잺 Productos que Requieren Reabastecimiento</h3>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      {{#each lowStockProducts}}
      <div
        class="border rounded-lg p-4 {{#if (eq stock 0)}}border-red-200 bg-red-50{{else}}border-yellow-200 bg-yellow-50{{/if}}">
        <div class="flex justify-between items-start mb-2">
          <h4 class="font-semibold text-gray-900">{{nombre}}</h4>
          <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full
              {{#if (eq categoria 'bebidas')}}bg-blue-100 text-blue-800{{/if}}
              {{#if (eq categoria 'snacks')}}bg-yellow-100 text-yellow-800{{/if}}
              {{#if (eq categoria 'comida')}}bg-green-100 text-green-800{{/if}}
              {{#if (eq categoria 'otros')}}bg-purple-100 text-purple-800{{/if}}">
            {{categoria}}
          </span>
        </div>
        <div class="flex justify-between items-center">
          <span class="text-sm text-gray-600">Stock:</span>
          <span class="font-bold {{#if (eq stock 0)}}text-red-600{{else}}text-yellow-600{{/if}}">
            {{stock}} unidades
          </span>
        </div>
        <div class="flex justify-between items-center mt-1">
          <span class="text-sm text-gray-600">Precio:</span>
          <span class="font-medium text-gray-900">${{precio}}</span>
        </div>
        {{#if (eq stock 0)}}
        <div class="mt-2 text-xs text-red-600 font-medium">
          游뚿 PRODUCTO AGOTADO
        </div>
        {{/if}}
      </div>
      {{/each}}
    </div>
  </div>
  {{/if}}

  <!-- Gesti칩n de Productos -->
  <div class="bg-white rounded-xl shadow-md p-6 mt-8">
    <div class="flex flex-col sm:flex-row justify-between items-center mb-6">
      <h3 class="text-xl font-bold text-gray-900 mb-4 sm:mb-0">丘뙖잺 Gesti칩n de Productos</h3>
      <a href="/store/create"
        class="inline-flex items-center gap-2 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-sm transition-all text-sm">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd"
            d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
            clip-rule="evenodd" />
        </svg>
        Nuevo Producto
      </a>
    </div>
    <div class="overflow-x-auto">
      <table class="min-w-full divide-y divide-gray-200">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categor칤a</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
            <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          {{#each allProducts}}
          <tr>
            <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">{{this.nombre}}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{this.categoria}}</td>
            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${{this.precio}}</td>
            <td
              class="px-6 py-4 whitespace-nowrap text-sm font-bold {{#if (lte this.stock 5)}}text-red-600{{else}}text-gray-900{{/if}}">
              {{this.stock}}</td>
            <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
              <div class="flex items-center justify-center gap-2">
                <button onclick="openAddStockModal({{this.id}}, '{{this.nombre}}', {{this.stock}})"
                  class="text-green-600 hover:text-green-900" title="A침adir Stock"><i class="fas fa-plus-circle"></i>
                  A침adir Stock</button>
                <a href="/store/edit/{{this.id}}" class="text-indigo-600 hover:text-indigo-900" title="Editar"><i
                    class="fas fa-edit"></i> Editar</a>
                <button onclick="openDeleteModal({{this.id}}, '{{this.nombre}}')"
                  class="text-red-600 hover:text-red-900" title="Eliminar"><i class="fas fa-trash"></i>
                  Eliminar</button>
              </div>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>

</div>

<!-- Modal para A침adir Stock -->
<div id="addStockModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class="bg-white rounded-xl shadow-2xl p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">A침adir Stock</h2>
    <form id="addStockForm" method="POST">
      <input type="hidden" id="stock-product-id" name="productId">
      <p class="mb-4">A침adiendo stock para: <strong id="stock-product-name"></strong></p>
      <p class="mb-4">Stock actual: <strong id="stock-product-current"></strong></p>
      <div class="mb-4">
        <label for="quantityToAdd" class="block text-sm font-medium text-gray-700 mb-2">Cantidad a A침adir</label>
        <input type="number" id="quantityToAdd" name="quantityToAdd" min="1" required
          class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
      </div>
      <div class="flex gap-4 mt-6">
        <button type="button" onclick="closeAddStockModal()"
          class="w-1/2 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold rounded-lg">Cancelar</button>
        <button type="submit"
          class="w-1/2 py-3 bg-green-600 hover:bg-green-700 text-white font-bold rounded-lg">Confirmar</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal para Eliminar Producto -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class="bg-white rounded-xl shadow-2xl p-8 w-full max-w-md text-center">
    <h2 class="text-2xl font-bold text-red-700 mb-4">Confirmar Eliminaci칩n</h2>
    <p class="mb-6">쮼st치s seguro de que quieres eliminar el producto <strong id="delete-product-name"></strong>? Esta
      acci칩n no se puede deshacer.</p>
    <form id="deleteForm" method="GET">
      <div class="flex gap-4 justify-center">
        <button type="button" onclick="closeDeleteModal()"
          class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold rounded-lg">Cancelar</button>
        <button type="submit"
          class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg">Eliminar</button>
      </div>
    </form>
  </div>
</div>



<script>
  // Modal de A침adir Stock
  const addStockModal = document.getElementById('addStockModal');
  const addStockForm = document.getElementById('addStockForm');
  const stockProductName = document.getElementById('stock-product-name');
  const stockProductCurrent = document.getElementById('stock-product-current');

  function openAddStockModal(id, name, currentStock) {
    addStockForm.action = `/store/inventory/add-stock/${id}`;
    stockProductName.textContent = name;
    stockProductCurrent.textContent = currentStock;
    addStockModal.classList.remove('hidden');
    addStockModal.classList.add('flex');
  }

  function closeAddStockModal() {
    addStockModal.classList.add('hidden');
    addStockModal.classList.remove('flex');
  }

  // Modal de Eliminar Producto
  const deleteModal = document.getElementById('deleteModal');
  const deleteForm = document.getElementById('deleteForm');
  const deleteProductName = document.getElementById('delete-product-name');

  function openDeleteModal(id, name) {
    deleteForm.action = `/store/delete/${id}`;
    deleteProductName.textContent = name;
    deleteModal.classList.remove('hidden');
    deleteModal.classList.add('flex');
  }

  function closeDeleteModal() {
    deleteModal.classList.add('hidden');
    deleteModal.classList.remove('flex');
  }
</script>
