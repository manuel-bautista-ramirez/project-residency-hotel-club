 <!-- Header -->
  <div class="bg-white shadow-sm border-b border-slate-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <h1 class="text-3xl md:text-4xl font-bold text-blue-900 text-center mb-6">
        游닍 Reporte de Inventario
      </h1>
      <div class="flex flex-wrap gap-3 justify-center">
        <a href="/store" class="inline-flex items-center gap-2 px-4 py-2.5 bg-blue-600 hover:bg-blue-700 text-white font-medium rounded-lg shadow-md transition-all">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5"><path d="M2.25 2.25a.75.75 0 000 1.5h1.386c.17 0 .318.114.362.278l2.558 9.592a3.752 3.752 0 00-2.806 3.63c0 .414.336.75.75.75h15.75a.75.75 0 000-1.5H5.378A2.25 2.25 0 017.5 15h11.218a.75.75 0 00.674-.421 60.358 60.358 0 002.96-7.228.75.75 0 00-.525-.965A60.864 60.864 0 005.68 4.509l-.232-.867A1.875 1.875 0 003.636 2.25H2.25zM3.75 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0zM16.5 20.25a1.5 1.5 0 113 0 1.5 1.5 0 01-3 0z"/></svg>
          Volver a Tienda
        </a>
        {{#if (eq user.role "Administrador")}}
          <a href="/store/create" class="inline-flex items-center gap-2 px-4 py-2.5 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg shadow-md transition-all">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5"><path fill-rule="evenodd" d="M12 3.75a.75.75 0 01.75.75v6.75h6.75a.75.75 0 010 1.5h-6.75v6.75a.75.75 0 01-1.5 0v-6.75H4.5a.75.75 0 010-1.5h6.75V4.5a.75.75 0 01.75-.75z" clip-rule="evenodd"/></svg>
            Agregar Producto
          </a>
        {{/if}}
        <a href="/store/dashboard" class="inline-flex items-center gap-2 px-4 py-2.5 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg shadow-md transition-all">
          <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5"><path d="M18.375 2.25c-1.035 0-1.875.84-1.875 1.875v15.75c0 1.035.84 1.875 1.875 1.875h.75c1.035 0 1.875-.84 1.875-1.875V4.125c0-1.036-.84-1.875-1.875-1.875h-.75zM9.75 8.625c0-1.036.84-1.875 1.875-1.875h.75c1.036 0 1.875.84 1.875 1.875v11.25c0 1.035-.84 1.875-1.875 1.875h-.75a1.875 1.875 0 01-1.875-1.875V8.625zM3 13.125c0-1.036.84-1.875 1.875-1.875h.75c1.036 0 1.875.84 1.875 1.875v6.75c0 1.035-.84 1.875-1.875 1.875h-.75A1.875 1.875 0 013 19.875v-6.75z"/></svg>
          Dashboard
        </a>
      </div>
    </div>
  </div>

  <!-- Content -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    
    <!-- Resumen por Categor칤a -->
    <div class="bg-white rounded-xl shadow-md p-6 mb-8">
      <h3 class="text-xl font-bold text-gray-900 mb-6">游늵 Inventario por Categor칤a</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categor칤a</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Productos</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Total</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Valor Inventario</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio Promedio</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock Min/Max</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {{#each inventoryReport.por_categoria}}
            <tr>
              <td class="px-6 py-4 whitespace-nowrap">
                <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
                  {{#if (eq categoria 'bebidas')}}bg-blue-100 text-blue-800{{/if}}
                  {{#if (eq categoria 'snacks')}}bg-yellow-100 text-yellow-800{{/if}}
                  {{#if (eq categoria 'comida')}}bg-green-100 text-green-800{{/if}}
                  {{#if (eq categoria 'otros')}}bg-purple-100 text-purple-800{{/if}}">
                  {{categoria}}
                </span>
              </td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{total_productos}}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{stock_total}}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-green-600">${{valor_inventario}}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">${{precio_promedio}}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{stock_minimo}} / {{stock_maximo}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

    <!-- Productos con Stock Bajo -->
    {{#if lowStockProducts}}
    <div class="bg-white rounded-xl shadow-md p-6">
      <h3 class="text-xl font-bold text-gray-900 mb-6">丘멆잺 Productos que Requieren Reabastecimiento</h3>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
        {{#each lowStockProducts}}
        <div class="border rounded-lg p-4 {{#if (eq stock 0)}}border-red-200 bg-red-50{{else}}border-yellow-200 bg-yellow-50{{/if}}">
          <div class="flex justify-between items-start mb-2">
            <h4 class="font-semibold text-gray-900">{{nombre}}</h4>
            <span class="inline-flex px-2 py-1 text-xs font-semibold rounded-full 
              {{#if (eq categoria 'bebidas')}}bg-blue-100 text-blue-800{{/if}}
              {{#if (eq categoria 'snacks')}}bg-yellow-100 text-yellow-800{{/if}}
              {{#if (eq categoria 'comida')}}bg-green-100 text-green-800{{/if}}
              {{#if (eq categoria 'otros')}}bg-purple-100 text-purple-800{{/if}}">
              {{categoria}}
            </span>
          </div>
          <div class="flex justify-between items-center">
            <span class="text-sm text-gray-600">Stock:</span>
            <span class="font-bold {{#if (eq stock 0)}}text-red-600{{else}}text-yellow-600{{/if}}">
              {{stock}} unidades
            </span>
          </div>
          <div class="flex justify-between items-center mt-1">
            <span class="text-sm text-gray-600">Precio:</span>
            <span class="font-medium text-gray-900">${{precio}}</span>
          </div>
          {{#if (eq stock 0)}}
          <div class="mt-2 text-xs text-red-600 font-medium">
            游뚿 PRODUCTO AGOTADO
          </div>
          {{/if}}
        </div>
        {{/each}}
      </div>
    </div>
    {{/if}}

    <!-- Gesti칩n de Productos -->
    <div class="bg-white rounded-xl shadow-md p-6 mt-8">
      <h3 class="text-xl font-bold text-gray-900 mb-6">丘뙖잺 Gesti칩n de Productos</h3>
      <div class="overflow-x-auto">
        <table class="min-w-full divide-y divide-gray-200">
          <thead class="bg-gray-50">
            <tr>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Producto</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Categor칤a</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Precio</th>
              <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Stock</th>
              <th class="px-6 py-3 text-center text-xs font-medium text-gray-500 uppercase tracking-wider">Acciones</th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {{#each allProducts}}
            <tr>
              <td class="px-6 py-4 whitespace-nowrap font-medium text-gray-900">{{this.nombre}}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">{{this.categoria}}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">${{this.precio}}</td>
              <td class="px-6 py-4 whitespace-nowrap text-sm font-bold {{#if (lte this.stock 5)}}text-red-600{{else}}text-gray-900{{/if}}">{{this.stock}}</td>
              <td class="px-6 py-4 whitespace-nowrap text-center text-sm font-medium">
                <div class="flex items-center justify-center gap-2">
                  <button onclick="openAddStockModal({{this.id}}, '{{this.nombre}}', {{this.stock}})" class="text-green-600 hover:text-green-900" title="A침adir Stock"><i class="fas fa-plus-circle"></i> A침adir Stock</button>
                  <a href="/store/edit/{{this.id}}" class="text-indigo-600 hover:text-indigo-900" title="Editar"><i class="fas fa-edit"></i> Editar</a>
                  <button onclick="openDeleteModal({{this.id}}, '{{this.nombre}}')" class="text-red-600 hover:text-red-900" title="Eliminar"><i class="fas fa-trash"></i> Eliminar</button>
                </div>
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>

  </div>

<!-- Modal para A침adir Stock -->
<div id="addStockModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class="bg-white rounded-xl shadow-2xl p-8 w-full max-w-md">
    <h2 class="text-2xl font-bold text-gray-800 mb-4">A침adir Stock</h2>
    <form id="addStockForm" method="POST">
      <input type="hidden" id="stock-product-id" name="productId">
      <p class="mb-4">A침adiendo stock para: <strong id="stock-product-name"></strong></p>
      <p class="mb-4">Stock actual: <strong id="stock-product-current"></strong></p>
      <div class="mb-4">
        <label for="quantityToAdd" class="block text-sm font-medium text-gray-700 mb-2">Cantidad a A침adir</label>
        <input type="number" id="quantityToAdd" name="quantityToAdd" min="1" required class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-green-500">
      </div>
      <div class="flex gap-4 mt-6">
        <button type="button" onclick="closeAddStockModal()" class="w-1/2 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold rounded-lg">Cancelar</button>
        <button type="submit" class="w-1/2 py-3 bg-green-600 hover:bg-green-700 text-white font-bold rounded-lg">Confirmar</button>
      </div>
    </form>
  </div>
</div>

<!-- Modal para Eliminar Producto -->
<div id="deleteModal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50">
  <div class="bg-white rounded-xl shadow-2xl p-8 w-full max-w-md text-center">
    <h2 class="text-2xl font-bold text-red-700 mb-4">Confirmar Eliminaci칩n</h2>
    <p class="mb-6">쮼st치s seguro de que quieres eliminar el producto <strong id="delete-product-name"></strong>? Esta acci칩n no se puede deshacer.</p>
    <form id="deleteForm" method="GET">
      <div class="flex gap-4 justify-center">
        <button type="button" onclick="closeDeleteModal()" class="px-6 py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold rounded-lg">Cancelar</button>
        <button type="submit" class="px-6 py-3 bg-red-600 hover:bg-red-700 text-white font-bold rounded-lg">Eliminar</button>
      </div>
    </form>
  </div>
</div>



<script>
  // Modal de A침adir Stock
  const addStockModal = document.getElementById('addStockModal');
  const addStockForm = document.getElementById('addStockForm');
  const stockProductName = document.getElementById('stock-product-name');
  const stockProductCurrent = document.getElementById('stock-product-current');

  function openAddStockModal(id, name, currentStock) {
    addStockForm.action = `/store/inventory/add-stock/${id}`;
    stockProductName.textContent = name;
    stockProductCurrent.textContent = currentStock;
    addStockModal.classList.remove('hidden');
    addStockModal.classList.add('flex');
  }

  function closeAddStockModal() {
    addStockModal.classList.add('hidden');
    addStockModal.classList.remove('flex');
  }

  // Modal de Eliminar Producto
  const deleteModal = document.getElementById('deleteModal');
  const deleteForm = document.getElementById('deleteForm');
  const deleteProductName = document.getElementById('delete-product-name');

  function openDeleteModal(id, name) {
    deleteForm.action = `/store/delete/${id}`;
    deleteProductName.textContent = name;
    deleteModal.classList.remove('hidden');
    deleteModal.classList.add('flex');
  }

  function closeDeleteModal() {
    deleteModal.classList.add('hidden');
    deleteModal.classList.remove('flex');
  }
</script>