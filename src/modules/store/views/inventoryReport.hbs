<script>
  // Modal de A침adir Stock
  const addStockModal = document.getElementById('addStockModal');
  const addStockForm = document.getElementById('addStockForm');
  const stockProductName = document.getElementById('stock-product-name');
  const stockProductCurrent = document.getElementById('stock-product-current');

  // Definir mostrarNotificacion para uso global y compatibilidad
  function mostrarNotificacion(mensaje, tipo = 'success') {
    if (typeof window.showNotification === 'function') {
      window.showNotification(mensaje, tipo);
    } else {
      alert(mensaje);
    }
  }

  function openAddStockModal(id, name, currentStock) {
    addStockForm.action = `/store/inventory/add-stock/${id}`;
    stockProductName.textContent = name;
    stockProductCurrent.textContent = currentStock;
    addStockModal.classList.remove('hidden');
    addStockModal.classList.add('flex');
    setTimeout(() => document.getElementById('quantityToAdd').focus(), 100);
  }

  function closeAddStockModal() {
    addStockModal.classList.add('hidden');
    addStockModal.classList.remove('flex');
  }

  // Modal de Eliminar Producto
  const deleteModal = document.getElementById('deleteModal');
  const deleteForm = document.getElementById('deleteForm');
  const deleteProductName = document.getElementById('delete-product-name');

  function openDeleteModal(id, name, stock) {
    if (stock > 0) {
      mostrarNotificacion(`No se puede eliminar "${name}" porque a칰n tiene ${stock} unidades en stock. El stock debe estar en 0 Para proceder.`, 'error');
      return;
    }
    deleteForm.action = `/store/delete/${id}`;
    deleteProductName.textContent = name;
    deleteModal.classList.remove('hidden');
    deleteModal.classList.add('flex');
  }

  function closeDeleteModal() {
    deleteModal.classList.add('hidden');
    deleteModal.classList.remove('flex');
  }

  // Close on Escape
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeAddStockModal();
      closeDeleteModal();
    }
  });

  // Close on Backdrop Click
  addStockModal.addEventListener('click', (e) => {
    if (e.target === addStockModal) closeAddStockModal();
  });
  deleteModal.addEventListener('click', (e) => {
    if (e.target === deleteModal) closeDeleteModal();
  });

  function adjustTableHeight(wrapperId, bodyId) {
    const tableWrapper = document.getElementById(wrapperId);
    const tableBody = document.getElementById(bodyId);

    if (!tableWrapper || !tableBody) return;

    const rowCount = tableBody.querySelectorAll('tr').length;

    // Si hay 6 o m치s registros, activar scroll
    if (rowCount >= 6) {
      tableWrapper.classList.add('max-h-96', 'overflow-y-auto', 'scrollbar-thin', 'scrollbar-thumb-gray-300', 'scrollbar-track-gray-100');
    } else {
      tableWrapper.classList.remove('max-h-96', 'overflow-y-auto');
      tableWrapper.style.maxHeight = 'none';
      tableWrapper.style.overflow = 'visible';
    }
  }

  document.addEventListener('DOMContentLoaded', () => {
    adjustTableHeight('inventoryTableWrapper', 'inventoryTableBody');
    adjustTableHeight('categoryTableWrapper', 'categoryTableBody');

    // Manejar notificaciones por par치metros URL
    const urlParams = new URLSearchParams(window.location.search);
    const success = urlParams.get('success');
    if (success && typeof mostrarNotificacion === 'function') {
      if (success === 'delete') {
        mostrarNotificacion('Producto eliminado correctamente', 'success');
      }
      // Limpiar URL
      const newUrl = window.location.pathname;
      window.history.replaceState({}, document.title, newUrl);
    }
  });

  window.addEventListener('load', () => setTimeout(() => {
    adjustTableHeight('inventoryTableWrapper', 'inventoryTableBody');
    adjustTableHeight('categoryTableWrapper', 'categoryTableBody');
  }, 200));
</script>

