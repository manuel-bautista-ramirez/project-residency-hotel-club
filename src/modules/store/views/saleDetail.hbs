<!-- Navigation Header & Filtros Sticky -->
<div class="bg-white shadow-sm border-b border-slate-200 sticky top-0 z-30 pt-10">
  <div class="w-full px-3 sm:px-4 lg:px-8">
    <div class="mt-2 w-full border-t border-slate-100 pt-3 pb-2">
      {{> storeNavButtons activePage="store" user=user}}
    </div>
  </div>
</div>

<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideIn {
    from {
      opacity: 0;
      transform: translateX(-20px);
    }

    to {
      opacity: 1;
      transform: translateX(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }

  .animate-slide-in {
    animation: slideIn 0.6s ease-out forwards;
  }
</style>

<!-- Contenido -->
<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-6 md:py-8 animate-fade-in">

  <!-- Header con botón de volver -->
  <div class="mb-6 animate-slide-in">
    <a href="/store/sales"
      class="inline-flex items-center gap-2 text-blue-600 hover:text-blue-800 font-medium transition-all hover:gap-3">
      <i class="fas fa-arrow-left"></i>
      <span>Volver a Ventas</span>
    </a>
    <div class="flex items-center gap-3 mt-4">
      <div class="bg-gradient-to-br from-blue-500 to-purple-600 p-3 rounded-xl shadow-lg">
        <i class="fas fa-receipt text-white text-2xl"></i>
      </div>
      <div>
        <h1 class="text-2xl md:text-3xl font-bold text-gray-900">Detalles de la Venta</h1>
        <p class="text-sm text-gray-500 mt-1">Información completa de la transacción</p>
      </div>
    </div>
  </div>

  <!-- Card Principal con diseño mejorado -->
  <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-100 animate-fade-in">

    <!-- Información General con gradiente y iconos grandes -->
    <div class="bg-gradient-to-br from-blue-50 via-purple-50 to-pink-50 p-6 md:p-8 border-b border-gray-200">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-white p-2 rounded-lg shadow-sm">
          <i class="fas fa-info-circle text-blue-600 text-xl"></i>
        </div>
        <h2 class="text-xl font-bold text-gray-900">Información General</h2>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">

        <!-- Cliente -->
        <div
          class="bg-white rounded-xl p-5 shadow-md border border-gray-100 hover:shadow-lg transition-all hover:-translate-y-1">
          <div class="flex items-center gap-3 mb-3">
            <div class="bg-blue-100 p-3 rounded-lg">
              <i class="fas fa-user text-blue-600 text-xl"></i>
            </div>
            <div>
              <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wide">Cliente</h3>
              <p class="text-lg font-bold text-gray-900 mt-1">{{sale.nombre_cliente}}</p>
            </div>
          </div>
        </div>

        <!-- Fecha -->
        <div
          class="bg-white rounded-xl p-5 shadow-md border border-gray-100 hover:shadow-lg transition-all hover:-translate-y-1">
          <div class="flex items-center gap-3 mb-3">
            <div class="bg-green-100 p-3 rounded-lg">
              <i class="fas fa-calendar-alt text-green-600 text-xl"></i>
            </div>
            <div>
              <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wide">Fecha</h3>
              <p class="text-lg font-bold text-gray-900 mt-1">{{formatDate sale.fecha_venta}}</p>
            </div>
          </div>
        </div>

        <!-- Total - Destacado -->
        <div
          class="bg-gradient-to-br from-green-500 to-emerald-600 rounded-xl p-5 shadow-lg border border-green-600 hover:shadow-xl transition-all hover:-translate-y-1 sm:col-span-2 lg:col-span-1">
          <div class="flex items-center gap-3 mb-3">
            <div class="bg-white/20 p-3 rounded-lg">
              <i class="fas fa-dollar-sign text-white text-xl"></i>
            </div>
            <div>
              <h3 class="text-xs font-bold text-green-100 uppercase tracking-wide">Total de la Venta</h3>
              <p class="text-3xl font-bold text-white mt-1">${{sale.total}}</p>
            </div>
          </div>
        </div>

        <!-- Método de Pago -->
        <div
          class="bg-white rounded-xl p-5 shadow-md border border-gray-100 hover:shadow-lg transition-all hover:-translate-y-1">
          <div class="flex items-center gap-3 mb-3">
            <div class="bg-purple-100 p-3 rounded-lg">
              <i class="fas fa-credit-card text-purple-600 text-xl"></i>
            </div>
            <div>
              <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wide">Método de Pago</h3>
              <p class="text-lg font-bold text-gray-900 mt-1 capitalize">{{sale.tipo_pago}}</p>
            </div>
          </div>
        </div>

        <!-- Atendido por -->
        <div
          class="bg-white rounded-xl p-5 shadow-md border border-gray-100 hover:shadow-lg transition-all hover:-translate-y-1">
          <div class="flex items-center gap-3 mb-3">
            <div class="bg-orange-100 p-3 rounded-lg">
              <i class="fas fa-user-tie text-orange-600 text-xl"></i>
            </div>
            <div>
              <h3 class="text-xs font-bold text-gray-500 uppercase tracking-wide">Atendido por</h3>
              <p class="text-lg font-bold text-gray-900 mt-1">{{sale.usuario}}</p>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Lista de Productos -->
    <div class="p-6 md:p-8">
      <div class="flex items-center gap-3 mb-6">
        <div class="bg-gradient-to-br from-green-500 to-emerald-600 p-2 rounded-lg shadow-sm">
          <i class="fas fa-shopping-cart text-white text-xl"></i>
        </div>
        <h2 class="text-xl font-bold text-gray-900">Productos Comprados</h2>
      </div>

      <!-- Tabla Desktop -->
      <div class="hidden md:block overflow-hidden rounded-xl border border-gray-200 shadow-sm">
        <table class="w-full">
          <thead class="bg-gradient-to-r from-gray-50 to-gray-100">
            <tr>
              <th class="px-6 py-4 text-left text-xs font-bold text-gray-700 uppercase tracking-wider">
                <i class="fas fa-box mr-2 text-gray-500"></i>Producto
              </th>
              <th class="px-6 py-4 text-center text-xs font-bold text-gray-700 uppercase tracking-wider">
                <i class="fas fa-hashtag mr-2 text-gray-500"></i>Cantidad
              </th>
              <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">
                <i class="fas fa-tag mr-2 text-gray-500"></i>Precio Unit.
              </th>
              <th class="px-6 py-4 text-right text-xs font-bold text-gray-700 uppercase tracking-wider">
                <i class="fas fa-calculator mr-2 text-gray-500"></i>Subtotal
              </th>
            </tr>
          </thead>
          <tbody class="bg-white divide-y divide-gray-200">
            {{#each sale.productos}}
            <tr class="hover:bg-blue-50 transition-colors">
              <td class="px-6 py-4 text-sm font-bold text-gray-900">
                <div class="flex items-center gap-2">
                  <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                  {{this.producto_nombre}}
                </div>
              </td>
              <td class="px-6 py-4 text-sm text-gray-700 text-center">
                <span
                  class="inline-flex items-center justify-center bg-gradient-to-r from-blue-500 to-blue-600 text-white font-bold px-4 py-2 rounded-full text-sm shadow-sm">
                  {{this.cantidad}}
                </span>
              </td>
              <td class="px-6 py-4 text-sm text-gray-900 text-right font-semibold">${{this.precio_unitario}}</td>
              <td class="px-6 py-4 text-base font-bold text-green-600 text-right">${{this.subtotal}}</td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>

      <!-- Cards Mobile -->
      <div class="md:hidden space-y-4">
        {{#each sale.productos}}
        <div
          class="bg-gradient-to-br from-gray-50 to-white rounded-xl p-4 border-2 border-gray-200 shadow-md hover:shadow-lg transition-all">
          <div class="flex justify-between items-start mb-4">
            <div class="flex-1">
              <div class="flex items-center gap-2 mb-2">
                <div class="w-2 h-2 bg-blue-500 rounded-full"></div>
                <h3 class="font-bold text-gray-900 text-base">{{this.producto_nombre}}</h3>
              </div>
            </div>
            <span
              class="inline-flex items-center bg-gradient-to-r from-blue-500 to-blue-600 text-white font-bold px-3 py-1.5 rounded-full text-sm shadow-md ml-2">
              {{this.cantidad}}x
            </span>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="bg-white p-3 rounded-lg border border-gray-200 shadow-sm">
              <div class="flex items-center gap-2 mb-1">
                <i class="fas fa-tag text-gray-400 text-xs"></i>
                <p class="text-xs text-gray-500 font-semibold">Precio Unit.</p>
              </div>
              <p class="font-bold text-gray-900 text-lg">${{this.precio_unitario}}</p>
            </div>
            <div class="bg-gradient-to-br from-green-50 to-emerald-50 p-3 rounded-lg border border-green-200 shadow-sm">
              <div class="flex items-center gap-2 mb-1">
                <i class="fas fa-calculator text-green-500 text-xs"></i>
                <p class="text-xs text-green-600 font-semibold">Subtotal</p>
              </div>
              <p class="font-bold text-green-600 text-lg">${{this.subtotal}}</p>
            </div>
          </div>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>
