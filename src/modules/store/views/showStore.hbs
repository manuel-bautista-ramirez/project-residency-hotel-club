<style>
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }

    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in {
    animation: fadeIn 0.5s ease-out forwards;
  }
</style>
<!-- Contenido -->
<div class="w-full px-3 sm:px-4 lg:px-8 py-4 sm:py-8 animate-fade-in">

  <!-- Grid de Productos -->
  <div id="productsGrid" class="grid grid-cols-2 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-2 sm:gap-4 lg:gap-6">
    {{#if products}}
    {{#each products}}
    <div
      class="group product-card bg-white rounded-lg sm:rounded-xl shadow-sm sm:shadow-md overflow-hidden hover:shadow-lg sm:hover:shadow-xl transition-all duration-300 ease-in-out flex flex-col"
      data-id="{{this.id}}" data-nombre="{{this.nombre}}" data-precio="{{this.precio}}"
      data-categoria="{{this.categoria}}" data-stock="{{this.stock}}">
      <div class="relative h-32 sm:h-40 lg:h-48 bg-slate-50">
        {{#if this.imagen}}
        <img src="{{this.imagen}}" alt="{{this.nombre}}"
          class="w-full h-full object-contain object-center transition-transform duration-300 ease-in-out group-hover:scale-110 p-2">
        {{else}}
        <div class="w-full h-full flex items-center justify-center bg-slate-100 rounded-t-lg">
          <i class="fas fa-box-open text-4xl sm:text-5xl text-slate-300"></i>
        </div>
        {{/if}}
      </div>
      <div class="p-2 sm:p-4 flex-grow flex flex-col justify-between">
        <div>
          <h3 class="text-sm sm:text-lg font-bold text-slate-800 mb-1 line-clamp-2">{{this.nombre}}</h3>
          <p class="text-xs sm:text-sm text-slate-500 mb-2">{{this.categoria}}</p>
          <div
            class="flex flex-col sm:flex-row items-start sm:items-center justify-between gap-1 sm:gap-2 mb-2 sm:mb-3">
            <span class="text-lg sm:text-2xl font-bold text-blue-600">${{this.precio}}</span>
            <span class="text-xs sm:text-sm text-slate-600 flex-shrink-0">Stock: {{this.stock}}</span>
          </div>
        </div>
        <button
          class="sell-btn mt-2 w-full px-2 sm:px-3 py-2 bg-blue-600 hover:bg-blue-700 text-white text-xs sm:text-sm font-medium rounded-lg transition-colors disabled:bg-gray-400 disabled:cursor-not-allowed active:scale-95 flex items-center justify-center gap-2"
          {{#unless (gt this.stock 0)}}disabled{{/unless}}>
          {{#if (gt this.stock 0)}}
          <i class="fas fa-shopping-cart"></i> Vender
          {{else}}
          <i class="fas fa-times-circle"></i> Agotado
          {{/if}}
        </button>
      </div>
    </div>
    {{/each}}
    {{else}}
    <div class="col-span-full text-center py-8 sm:py-12">
      <p class="text-lg sm:text-xl font-semibold text-slate-600">No hay productos disponibles</p>
    </div>
    {{/if}}
  </div>
</div>

<!-- Modal de Venta RÃ¡pida -->
<div id="sale-modal" class="fixed inset-0 bg-black bg-opacity-50 hidden items-center justify-center z-50 p-4">
  <div
    class="bg-white rounded-lg sm:rounded-xl shadow-2xl p-4 sm:p-6 lg:p-8 w-full max-w-md max-h-[90vh] overflow-y-auto">
    <h2 class="text-xl sm:text-2xl font-bold text-gray-800 mb-3 sm:mb-4">Registrar Venta</h2>
    <form id="sale-form" action="/store/sell" method="POST">
      <input type="hidden" id="modal-product-id">
      <div class="mb-3 sm:mb-4">
        <p class="text-base sm:text-lg font-semibold line-clamp-2" id="modal-product-name"></p>
        <p class="text-sm sm:text-base text-gray-600" id="modal-product-price"></p>
      </div>

      <div class="mb-3 sm:mb-4">
        <label for="modal-quantity"
          class="block text-xs sm:text-sm font-medium text-gray-700 mb-1 sm:mb-2">Cantidad</label>
        <input type="number" id="modal-quantity" value="1" min="1"
          class="w-full px-3 sm:px-4 py-2 sm:py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-purple-500 text-sm sm:text-base" />
      </div>

      <div class="mb-4 sm:mb-6">
        <label class="block text-xs sm:text-sm font-medium text-gray-700 mb-2 sm:mb-3">MÃ©todo de Pago</label>
        <div class="grid grid-cols-3 gap-2">
          <label
            class="flex flex-col items-center justify-center p-2 sm:p-3 border-2 rounded-lg cursor-pointer hover:border-purple-600 transition-colors">
            <input type="radio" name="tipo_pago" value="efectivo" class="sr-only peer" checked>
            <i class="fas fa-money-bill-wave text-xl mb-1 text-gray-400 peer-checked:text-purple-600"></i>
            <span class="font-semibold peer-checked:text-purple-600 text-xs sm:text-sm">Efectivo</span>
          </label>
          <label
            class="flex flex-col items-center justify-center p-2 sm:p-3 border-2 rounded-lg cursor-pointer hover:border-purple-600 transition-colors">
            <input type="radio" name="tipo_pago" value="tarjeta" class="sr-only peer">
            <i class="fas fa-credit-card text-xl mb-1 text-gray-400 peer-checked:text-purple-600"></i>
            <span class="font-semibold peer-checked:text-purple-600 text-xs sm:text-sm">Tarjeta</span>
          </label>
          <label
            class="flex flex-col items-center justify-center p-2 sm:p-3 border-2 rounded-lg cursor-pointer hover:border-purple-600 transition-colors">
            <input type="radio" name="tipo_pago" value="transferencia" class="sr-only peer">
            <i class="fas fa-mobile-alt text-xl mb-1 text-gray-400 peer-checked:text-purple-600"></i>
            <span class="font-semibold peer-checked:text-purple-600 text-xs sm:text-sm">Transf.</span>
          </label>
        </div>
      </div>

      <div class="flex gap-2 sm:gap-4">
        <button type="button" id="cancel-sale-btn"
          class="flex-1 py-2 sm:py-3 bg-gray-200 hover:bg-gray-300 text-gray-700 font-bold rounded-lg transition-colors text-sm sm:text-base flex items-center justify-center gap-2">
          <i class="fas fa-times"></i> Cancelar
        </button>
        <button type="submit" id="confirm-sale-btn"
          class="flex-1 px-3 sm:px-5 py-2 sm:py-3.5 bg-purple-600 hover:bg-purple-700 text-white font-bold rounded-lg transition-colors text-sm sm:text-base flex items-center justify-center gap-2">
          <i class="fas fa-check"></i> Confirmar
        </button>
      </div>
    </form>
  </div>
</div>


<script>
  // FunciÃ³n simple para convertir nÃºmeros a letras
  function convertirNumeroALetras(numero) {
    return `${numero.toFixed(2)} pesos`;
  }

  document.addEventListener('DOMContentLoaded', () => {
    console.log('ðŸ›’ Inicializando tienda...');

    const products = {{{ json products }}};
  console.log('ðŸ“¦ Productos cargados:', products);

  const modal = document.getElementById('sale-modal');
  const form = document.getElementById('sale-form');
  const cancelBtn = document.getElementById('cancel-sale-btn');

  if (!modal || !form || !cancelBtn) {
    console.error('âŒ No se encontraron elementos del modal');
    return;
  }

  const openModal = (product) => {
    const precio = parseFloat(product.precio);
    document.getElementById('modal-product-id').value = product.id;
    document.getElementById('modal-product-name').textContent = product.nombre;
    document.getElementById('modal-product-price').textContent = `$${precio.toFixed(2)}`;
    document.getElementById('modal-quantity').max = product.stock;
    modal.classList.remove('hidden');
    modal.classList.add('flex');
    document.body.style.overflow = 'hidden'; // Prevenir scroll cuando el modal estÃ¡ abierto
  };

  const closeModal = () => {
    modal.classList.add('hidden');
    modal.classList.remove('flex');
    form.reset();
    document.body.style.overflow = 'auto'; // Restaurar scroll
  };

  // Agregar event listeners a los botones de vender
  document.querySelectorAll('.sell-btn').forEach((button, index) => {
    console.log(`ðŸ”˜ Configurando botÃ³n ${index + 1}`);
    button.addEventListener('click', (e) => {
      console.log('ðŸ›’ Click en botÃ³n vender');
      e.preventDefault();

      const card = e.target.closest('.product-card');
      if (!card) {
        console.error('âŒ No se encontrÃ³ la tarjeta del producto');
        return;
      }

      const productId = card.dataset.id;
      console.log('ðŸ†” ID del producto:', productId);

      const product = products.find(p => p.id == productId);
      console.log('ðŸ“¦ Producto encontrado:', product);

      if (product) {
        openModal(product);
      } else {
        console.error('âŒ Producto no encontrado');
        alert('Error: Producto no encontrado');
      }
    });
  });

  cancelBtn.addEventListener('click', closeModal);

  // Cerrar modal al hacer click en el fondo (backdrop)
  modal.addEventListener('click', (e) => {
    if (e.target === modal) {
      closeModal();
    }
  });

  form.addEventListener('submit', async (e) => {
    e.preventDefault();
    const productId = document.getElementById('modal-product-id').value;
    const quantity = parseInt(document.getElementById('modal-quantity').value, 10);
    const paymentMethod = form.querySelector('input[name="tipo_pago"]:checked').value;
    const product = products.find(p => p.id == productId);

    if (quantity > product.stock) {
      alert('La cantidad excede el stock disponible.');
      return;
    }

    const precio = parseFloat(product.precio);
    const total = precio * quantity;

    const saleData = {
      productos: JSON.stringify([{
        id: product.id,
        nombre: product.nombre,
        precio: precio,
        cantidad: quantity,
        subtotal: total
      }]),
      total: total,
      tipo_pago: paymentMethod,
      nombre_cliente: 'Cliente de Mostrador',
      total_letras: convertirNumeroALetras(total)
    };

    // AÃ±adir campos que faltan en el formulario
    saleData.id_producto = productId;
    saleData.cantidad = quantity;

    console.log('ðŸ’° Datos de venta:', saleData);

    try {
      const response = await fetch('/store/checkout', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify(saleData)
      });
      const result = await response.json();
      if (result.success) {
        alert('âœ… Venta registrada exitosamente');
        closeModal();
        window.location.reload(); // Recargar para ver el stock actualizado
      } else {
        alert('âŒ Error: ' + (result.error || 'No se pudo registrar la venta'));
      }
    } catch (error) {
      alert('âŒ Error de conexiÃ³n al registrar la venta.');
    }
  });

  // LÃ³gica de filtros
  const searchInput = document.getElementById('searchProduct');
  const categoryFilter = document.getElementById('filterCategory');
  const applyFilters = () => {
    const searchTerm = searchInput.value.toLowerCase();
    const selectedCategory = categoryFilter.value;
    document.querySelectorAll('.product-card').forEach(card => {
      const productName = card.dataset.nombre.toLowerCase();
      const productCategory = card.dataset.categoria;
      const matchesSearch = productName.includes(searchTerm);
      const matchesCategory = !selectedCategory || productCategory === selectedCategory;
      card.style.display = (matchesSearch && matchesCategory) ? 'flex' : 'none';
    });
  };
  searchInput.addEventListener('input', applyFilters);
  categoryFilter.addEventListener('change', applyFilters);

  console.log('âœ… Tienda inicializada correctamente');
  });
</script>
