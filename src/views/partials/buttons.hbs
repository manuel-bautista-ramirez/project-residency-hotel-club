<div class="mt-3 flex flex-wrap justify-center gap-3">
  {{#if (eq user.role "Administrador")}}
    <a
      href="/rooms/precios"
      class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-green-600 hover:bg-green-700 text-white font-medium rounded-lg shadow transition w-full sm:w-auto text-center"
    ><i class="fa-solid fa-dollar-sign"></i><span>Precios</span></a>
    <a
      href="/rooms/reportes"
      class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg shadow transition w-full sm:w-auto text-center"
    ><i class="fa-solid fa-chart-line"></i><span>Reportes</span></a>
  {{/if}}
  <a
    href="/rooms/list/reservations"
    class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg shadow transition w-full sm:w-auto text-center"
  ><i class="fa-solid fa-calendar-check"></i><span>Reservaciones</span></a>
  <a
    href="/rooms/list/rentas"
    class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg shadow transition w-full sm:w-auto text-center"
  ><i class="fa-solid fa-key"></i><span>Rentas</span></a>

  <a
    href="/rooms/list/calendario"
    class="inline-flex items-center justify-center gap-2 px-4 py-2 bg-purple-600 hover:bg-purple-700 text-white font-medium rounded-lg shadow transition w-full sm:w-auto text-center"
  ><i class="fa-solid fa-calendar-days"></i><span>Calendario</span></a>
