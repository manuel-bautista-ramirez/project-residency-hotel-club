<div class="mt-4 px-2 sm:px-4 lg:px-0">
  <div class="max-w-6xl mx-auto grid grid-cols-3 gap-2 md:flex md:flex-nowrap md:justify-center md:items-center md:gap-3 lg:gap-4">
    <!-- Habitaciones - Azul -->
    <a
      href="/rooms"
      class="flex items-center justify-center gap-1 px-2 py-1.5 text-xs text-white font-medium rounded-lg shadow transition-all duration-200 hover:scale-105 active:scale-95 bg-blue-600 hover:bg-blue-700 min-w-0 flex-shrink-0 whitespace-nowrap md:min-w-[85px] lg:min-w-[95px] xl:min-w-[105px] md:px-3 md:py-2 lg:px-4 lg:py-2.5 xl:px-5 xl:py-3 md:text-sm lg:text-base"
    >
      <i class="fa-solid fa-bed text-xs md:text-sm lg:text-base"></i>
      <span>Habitaciones</span>
    </a>

    {{#if (eq user.role "Administrador")}}
    <!-- Precios - Verde -->
    <a
      href="/rooms/precios"
      class="flex items-center justify-center gap-1 px-2 py-1.5 text-xs text-white font-medium rounded-lg shadow transition-all duration-200 hover:scale-105 active:scale-95 bg-green-600 hover:bg-green-700 min-w-0 flex-shrink-0 whitespace-nowrap md:min-w-[85px] lg:min-w-[95px] xl:min-w-[105px] md:px-3 md:py-2 lg:px-4 lg:py-2.5 xl:px-5 xl:py-3 md:text-sm lg:text-base"
    >
      <i class="fa-solid fa-dollar-sign text-xs md:text-sm lg:text-base"></i>
      <span>Precios</span>
    </a>

    <!-- Reportes - Morado -->
    <a
      href="/rooms/reportes"
      class="flex items-center justify-center gap-1 px-2 py-1.5 text-xs text-white font-medium rounded-lg shadow transition-all duration-200 hover:scale-105 active:scale-95 bg-purple-600 hover:bg-purple-700 min-w-0 flex-shrink-0 whitespace-nowrap md:min-w-[85px] lg:min-w-[95px] xl:min-w-[105px] md:px-3 md:py-2 lg:px-4 lg:py-2.5 xl:px-5 xl:py-3 md:text-sm lg:text-base"
    >
      <i class="fa-solid fa-chart-line text-xs md:text-sm lg:text-base"></i>
      <span>Reportes</span>
    </a>
    {{/if}}

    <!-- Reservas - Amarillo (con texto oscuro para mejor contraste) -->
    <a
      href="/rooms/list/reservations"
      class="flex items-center justify-center gap-1 px-2 py-1.5 text-xs text-gray-800 font-medium rounded-lg shadow transition-all duration-200 hover:scale-105 active:scale-95 bg-yellow-500 hover:bg-yellow-600 min-w-0 flex-shrink-0 whitespace-nowrap md:min-w-[85px] lg:min-w-[95px] xl:min-w-[105px] md:px-3 md:py-2 lg:px-4 lg:py-2.5 xl:px-5 xl:py-3 md:text-sm lg:text-base"
    >
      <i class="fa-solid fa-calendar-check text-xs md:text-sm lg:text-base"></i>
      <span>Reservas</span>
    </a>

    <!-- Rentas - Naranja (con texto oscuro para mejor contraste) -->
    <a
      href="/rooms/list/rentas"
      class="flex items-center justify-center gap-1 px-2 py-1.5 text-xs text-gray-800 font-medium rounded-lg shadow transition-all duration-200 hover:scale-105 active:scale-95 bg-orange-500 hover:bg-orange-600 min-w-0 flex-shrink-0 whitespace-nowrap md:min-w-[85px] lg:min-w-[95px] xl:min-w-[105px] md:px-3 md:py-2 lg:px-4 lg:py-2.5 xl:px-5 xl:py-3 md:text-sm lg:text-base"
    >
      <i class="fa-solid fa-key text-xs md:text-sm lg:text-base"></i>
      <span>Rentas</span>
    </a>

    <!-- Agenda - Indigo -->
    <a
      href="/rooms/list/calendario"
      class="flex items-center justify-center gap-1 px-2 py-1.5 text-xs text-white font-medium rounded-lg shadow transition-all duration-200 hover:scale-105 active:scale-95 bg-indigo-600 hover:bg-indigo-700 min-w-0 flex-shrink-0 whitespace-nowrap md:min-w-[85px] lg:min-w-[95px] xl:min-w-[105px] md:px-3 md:py-2 lg:px-4 lg:py-2.5 xl:px-5 xl:py-3 md:text-sm lg:text-base"
    >
      <i class="fa-solid fa-calendar text-xs md:text-sm lg:text-base"></i>
      <span>Agenda</span>
    </a>
  </div>
</div>
