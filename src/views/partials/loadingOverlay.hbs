<div id="globalLoadingOverlay"
  class="fixed inset-0 z-[60] bg-white/80 backdrop-blur-md items-center justify-center transition-all duration-500 ease-out opacity-0 pointer-events-none hidden">
  <div data-loading-container
    class="flex flex-col items-center gap-5 bg-white/90 rounded-2xl px-8 py-6 shadow-lg transform scale-95 transition-all duration-500 ease-out max-w-sm w-full text-center">
    <div class="relative">
      <div class="w-16 h-16 border-4 border-blue-100 rounded-full"></div>
      <div class="w-16 h-16 border-4 border-blue-600 border-t-transparent rounded-full animate-spin absolute top-0 left-0"></div>
      <svg data-loading-success class="w-16 h-16 text-green-500 absolute top-0 left-0 opacity-0 transition-all duration-300"
        fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
      </svg>
    </div>

    <div class="text-center space-y-2">
      <p data-loading-message class="text-blue-800 font-medium text-lg transition-all duration-300">Procesando...</p>
      <p data-loading-subtext class="text-blue-600 text-sm opacity-0 transition-opacity duration-300 delay-1000">Por favor espera</p>
    </div>

    <div class="flex flex-col items-center gap-2 w-full">
      <div class="w-full h-1.5 bg-blue-100 rounded-full overflow-hidden">
        <div data-progress-bar class="h-full bg-blue-600 transition-all duration-500 ease-out w-0"></div>
      </div>
      <p data-progress-label class="text-xs font-semibold text-blue-600 tracking-wide">0%</p>
    </div>
  </div>
</div>
