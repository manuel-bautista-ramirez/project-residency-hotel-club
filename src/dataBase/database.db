CREATE TABLE IF NOT EXISTS habitaciones (
  id INT AUTO_INCREMENT PRIMARY KEY,
  numero VARCHAR(10) NOT NULL UNIQUE,
  tipo ENUM('sencilla', 'suite') NOT NULL,
  estado ENUM('disponible', 'ocupado', 'limpieza') DEFAULT 'disponible'
);

